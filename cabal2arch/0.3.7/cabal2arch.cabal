author:             Don Stewart
maintainer:         dons@galois.com
cabal-version:      >= 1.2
build-type:         Simple

flag small_base
    description: Choose the new smaller, split-up base package.

executable cabal2arch
    main-is:            Main.hs
    ghc-options:        -Wall

    if flag(small_base)
        build-depends:      
            base >= 3,
            pretty,
            process,
            directory,
            containers,
            bytestring
    else
        build-depends:      
            base < 3

    build-depends:
            Cabal >= 1.3.11 && < 1.5,
            pureMD5 >= 0.2.1,
            filepath

