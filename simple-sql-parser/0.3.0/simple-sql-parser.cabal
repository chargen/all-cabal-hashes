                       parsec >=3.1 && <3.2,
                       mtl >=2.1 && <2.2,
                       pretty >= 1.1 && < 1.2,
                       haskell-src-exts >= 1.14 && < 1.15
  default-language:    Haskell2010
  ghc-options:         -Wall
  if flag(sqlindent)
    buildable:         True
