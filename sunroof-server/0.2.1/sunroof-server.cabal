                       unordered-containers >= 0.1.3.0,
                       base             >= 4.3.1 && < 5,
                       containers       >= 0.4,
                       data-default     == 0.5.*,
                       vector-space     >= 0.8.6, 
                       kansas-comet     == 0.3.0,
                       wai-middleware-static >= 0.6 && < 0.7,
                       filepath         >= 1.3      && < 1.4,
                       scotty           >= 0.8      && < 0.9,
                       semigroups       >= 0.9,
                       warp             >= 3.0 && < 3.1,
                       stm              >= 2.2,
                       transformers     == 0.3.*,
                       text             >= 0.11,
                       tagged           >= 0.4.4,
                       time             >= 1.4,
                       sunroof-compiler == 0.2.*

  GHC-options: -Wall

