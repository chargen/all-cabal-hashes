                   , directory                 >= 1.0      && < 1.2
                   , containers                >= 0.2      && < 0.5
                   , blaze-html                >= 0.4      && < 0.5
                   , time                      >= 1.1.4    && < 1.4
                   , old-locale                >= 1.0.0.2  && < 1.1
                   , file-embed                >= 0.0.3.1  && < 0.1
                   , text                      >= 0.5      && < 1.0
                   , blaze-builder             >= 0.2.1.4  && < 0.4
                   , base64-bytestring         >= 0.1      && < 0.2
                   , cryptohash                >= 0.7      && < 0.8
                   , http-date
    exposed-modules: Network.Wai.Application.Static
    ghc-options:     -Wall
    extensions:     CPP

    if flag(print)
      cpp-options:  -DPRINT

