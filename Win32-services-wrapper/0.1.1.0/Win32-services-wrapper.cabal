build-type:          Simple
cabal-version:       >=1.8

source-repository head
  type:     darcs
  location: http://hub.darcs.net/ganesh/Win32-services-wrapper

flag warn-as-error
  default:     False
  description: Build with warnings-as-errors

library
  build-tools:         ghc >= 7.4 && < 7.8
  hs-source-dirs:      src
  exposed-modules:     System.Win32.SystemServices.Wrapper
  other-modules:
  build-depends:       
                       Win32-services >= 0.2.1 && < 0.3,
                       Win32 >= 2.2 && < 2.4,
                       filepath ==1.3.*,
                       directory >= 1.1 && < 1.3,
                       base >= 4.5 && < 4.7

  if flag(warn-as-error)
    ghc-options:      -Werror

  if true
    ghc-options:      -Wall


