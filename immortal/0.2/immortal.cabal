    Haskell2010
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    tests
  main-is:
    test.hs
  build-depends:
      base >= 4 && < 5
    , tasty >= 0.8
    , tasty-hunit
    , immortal
    , transformers
    , stm
    , lifted-base
  ghc-options: -Wall


