  exposed-modules:
    Graphics.ThumbnailPlus
    Graphics.ThumbnailPlus.ImageSize
  build-depends:
    base         >= 4.6   && < 5,
    bytestring   >= 0.10,
    data-default >= 0.5,

    transformers >= 0.3,
