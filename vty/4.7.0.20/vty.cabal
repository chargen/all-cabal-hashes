  build-depends:       base >= 4 && < 5,
                       bytestring,
                       containers,
                       deepseq >= 1.1 && < 1.4,
                       ghc-prim,
                       mtl >= 1.1.1.0 && < 2.2,
                       parallel >= 2.2 && < 3.3,
                       parsec >= 2 && < 4,
                       terminfo >= 0.3 && < 0.4,
                       unix,
