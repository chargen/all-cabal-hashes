    Build-Depends:       base >= 3 && < 5 , filepath 
  else
    Build-Depends:       base >= 2 && < 3
    
  Exposed-Modules:     System.Environment.Executable   
  Extensions:          ForeignFunctionInterface, CPP, EmptyDataDecls
  Hs-Source-Dirs:      .
  
  if os(darwin)
