    base-unicode-symbols >= 0.2 && < 0.3,
    random >= 1.0 && < 1.1,
    binary >= 0.5 && < 0.6,
    GLUT >= 2.2 && < 2.3,
    OpenGL >= 2.4 && < 2.5,
    SoccerFun >= 0.5.1 && < 0.6,
    process >= 1.0 && < 1.1
  Exposed-Modules:
    SoccerFun.UI.GL
  Other-Modules:
    Paths_SoccerFunGL

Executable sfPlayTape
  Main-Is: SoccerFun/UI/GL/PlayTape.hs

Executable sfRunMatch
  Main-Is: SoccerFun/UI/GL/RunMatch.hs


