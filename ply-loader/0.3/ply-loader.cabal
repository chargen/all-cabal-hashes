license-file:        LICENSE
author:              Anthony Cowley
maintainer:          acowley@gmail.com
copyright:           (c) Anthony Cowley 2012
category:            Graphics
build-type:          Simple
cabal-version:       >=1.10

source-repository head
  type: git
  location: git://github.com/acowley/ply-loader.git

library
  ghc-options:         -O2 -Wall
  exposed-modules:     PLY, PLY.Ascii, PLY.Binary, PLY.Conf, PLY.Types,
                       PLY.Internal.Parsers, PLY.Internal.StrictReplicate
                       
  build-depends:       base >= 4.6 && < 5, 
                       attoparsec >= 0.10, 
                       bytestring >= 0.10,
                       linear >= 0.2,
                       lens >= 3.0,
                       vector >= 0.9,
                       filepath,
                       directory,
                       parallel-io >= 0.3.2,
                       transformers,
                       cereal
  hs-source-dirs:      src
  default-language:    Haskell2010

executable ply2bin
  main-is:          Main.hs
  ghc-options:      -O2 -Wall -threaded "-with-rtsopts=-N"
  hs-source-dirs:   src/executable
  build-depends:    base >= 4.6 && < 5, 
                    bytestring >= 0.10,
                    linear >= 0.2,
                    vector >= 0.9,
                    ply-loader
  default-language: Haskell2010
