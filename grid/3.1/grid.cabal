  build-depends:   base ==4.*,
                   base-unicode-symbols ==0.2.*,
                   cereal ==0.3.*,
                   containers ==0.4.2.* || ==0.5.*
  ghc-options:     -Wall
  exposed-modules: Math.Geometry.Grid,
                   Math.Geometry.GridInternal,
                   Math.Geometry.GridMap

test-suite grid-tests
