                   test-framework-quickcheck2 ==0.3.*,
                   QuickCheck ==2.7.*,
                   test-framework ==0.8.*,
                   grid
  hs-source-dirs:  test
  ghc-options:     -Wall
  main-is:         Main.hs
  other-modules: Math.Geometry.GridQC



