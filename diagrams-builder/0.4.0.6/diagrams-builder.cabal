                       split >= 0.2 && < 0.3,
                       haskell-src-exts >= 1.13.1 && < 1.15,
                       cryptohash >= 0.8 && < 0.12,
                       bytestring >= 0.9.2 && < 0.11,
                       cmdargs >= 0.6 && < 0.11
  hs-source-dirs:      src
