    , bytestring
    , cassandra-thrift     >= 0.8
    , cereal
    , conduit              >= 1.1 && < 1.2
    , containers
    , data-default
    , errors
    , exceptions
    , mtl
    , network
    , resource-pool
    , retry                >= 0.5 && < 0.6
    , safecopy
    , stm
    , syb
    , text
    , time
    , transformers-base


