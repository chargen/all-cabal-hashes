  ghc-options: -Wall
  hs-source-dirs: test
  Build-depends:
      base >= 4 && < 5
    , cassy
    , bytestring
    , text
    , Thrift
    , network
    , cassandra-thrift
    , time
    , containers

    , test-framework >= 0.6
    , test-framework-quickcheck2 >= 0.2.12.2
    , test-framework-hunit >= 0.2.7
    , QuickCheck
    , HUnit
    , derive  


