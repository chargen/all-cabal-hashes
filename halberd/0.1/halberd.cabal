                     , filepath         == 1.3.*
                     , mtl              >= 2.0    &&  < 2.2
                     , tagged           >= 0.4    &&  < 0.8
                     , safe             == 0.3.*
                     , syb              >= 0.3    &&  < 0.5
  hs-source-dirs:      src
