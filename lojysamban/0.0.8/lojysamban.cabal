executable		lojysamban
    hs-source-dirs:	src
    main-is:		lojysamban.hs
    other-modules:	LojysambanLib, LojbanTools, Prolog2, PrologTools,
        NotUnif, Unif
    build-depends:	base > 3 && < 5, lojbanParser >= 0.1.2, yjtools >= 0.9.16
    ghc-options:	-Wall


