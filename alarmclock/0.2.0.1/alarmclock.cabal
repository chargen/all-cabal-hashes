category:            Concurrency
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Control.Concurrent.AlarmClock
  build-depends:
      base >=4.7 && <4.8
    , stm
    , time
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall

test-suite test
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs: test
  default-language:   Haskell2010
  build-depends:      base
                    , alarmclock
                    , time


