      QuickCheck >= 2.4 && < 2.5
      ,random >= 1.0 && < 1.1
    exposed-modules:
      CSPM.FiringRules.Test.Test
    other-modules:
      CSPM.FiringRules.Test.Mock1
      CSPM.FiringRules.Test.Mock2
      CSPM.FiringRules.Test.Gen
