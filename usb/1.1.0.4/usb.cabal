                   System.USB.Initialization
                   System.USB.Enumeration
                   System.USB.DeviceHandling
                   System.USB.Descriptors
                   System.USB.IO
                   System.USB.IO.StandardDeviceRequests
                   System.USB.Exceptions
                   System.USB.Internal
  other-modules: System.USB.Base, Utils

