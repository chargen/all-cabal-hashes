               , base-unicode-symbols >= 0.1.1 && < 0.3
               , bindings-libusb      >= 1.4.4 && < 1.5
               , bytestring           >= 0.9   && < 0.11
               , text                 >= 0.5   && < 0.12
               , vector               >= 0.5   && < 0.11

