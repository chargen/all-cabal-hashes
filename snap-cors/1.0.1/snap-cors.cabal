library
  hs-source-dirs: src
  exposed-modules:
    Snap.CORS
  build-depends:
    base >= 4.5 && < 5,
    hashable >= 1.1 && <1.3,
    network >= 2.4 && < 2.5,
    snap >= 0.13 && < 0.14,
    text >= 0.11 && < 0.12,
    transformers >= 0.3 && < 0.4,
    unordered-containers >= 0.2 && <0.3
  ghc-options: -Wall

