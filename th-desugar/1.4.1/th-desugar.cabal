  ghc-options:        -Wall -Werror -main-is Test.Run
  default-language:   Haskell2010
  default-extensions: TemplateHaskell
  main-is:            Test/Run.hs
  other-modules:      Test.Splices, Test.Dec, Test.DsDec

  build-depends:
      base >= 4 && < 5,
