    Data.Hadoop.SequenceFile.Types
    Data.Hadoop.Writable

  build-depends:
        base       >= 4.7 && < 4.8
      , attoparsec >= 0.12
      , bytestring >= 0.10
      , text       >= 1.1
      , vector     >= 0.10

test-suite tests
