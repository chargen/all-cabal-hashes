name:          hadoop-formats
version:       0.1.0.0

synopsis:
  Read/write file formats commonly used by Hadoop.

description:
  Currently this package only supports reading sequence files.
  .
  You will need to have `libsnappy` installed to build this project. If you are
  using OSX and homebrew to install snappy then the following should get
  everything installed successfully.
  .
  > $ brew install snappy
  > $ SNAPPY=$(brew --prefix snappy)
  > $ export C_INCLUDE_PATH=$SNAPPY/include
  > $ export LIBRARY_PATH=$SNAPPY/lib
  > $ cabal install hadoop-formats

homepage:      http://github.com/jystic/hadoop-formats
license:       Apache-2.0
license-file:  LICENSE
author:        Jacob Stanley
maintainer:    Jacob Stanley <jacob@stanley.io>
copyright:     Jacob Stanley (c) 2014
category:      Data
build-type:    Simple
cabal-version: >= 1.10

library
  default-language: Haskell2010
  hs-source-dirs: src

  c-sources: cbits/decode.c
  include-dirs: cbits
  extra-libraries: snappy

  cc-options: -O3
  --  -Weverything
  --  -Werror
  --  -Wno-error=variadic-macros
  --  -Wno-error=unused-parameter
  --  -Wno-error=undef
  --  -Wno-error=padded
  --  -Wno-error=format-nonliteral
  --  -fcolor-diagnostics

  ghc-options: -O2 -funbox-strict-fields
  -- -ddump-simpl -dsuppress-all -dsuppress-coercions
  ghc-prof-options: -auto-all -caf-all

  other-modules:
    Hadoop.Unsafe

  exposed-modules:
    Hadoop.SequenceFile
    Hadoop.SequenceFile.Parser
    Hadoop.SequenceFile.Types
    Hadoop.Writable

  build-depends:
        base       >= 4.7 && < 4.8
      , attoparsec >= 0.12
      , bytestring >= 0.10
      , text       >= 1.1
      , vector     >= 0.10

test-suite tests
  type: exitcode-stdio-1.0

  default-language: Haskell2010
  hs-source-dirs: tests
  main-is: Main.hs

  build-depends:
        base
      , bytestring
      , filepath
      , hadoop-formats
      , text
      , vector
