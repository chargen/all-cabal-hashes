                       , yaml >= 0.8 && < 0.9
  hs-source-dirs:      src
  default-language:    Haskell2010

  ghc-options: -Wall

executable pit
  hs-source-dirs: src-exec
  default-language: Haskell2010
  main-is: Main.hs
  build-depends: base >= 4.7 && < 4.8
                 , pit
                 , bytestring >= 0.10 && < 0.11
                 , optparse-applicative >= 0.10
                 , process >= 1.2 && < 1.3
                 , temporary >= 1.2 && < 1.3
                 , text >= 1.2 && < 1.3
                 , unordered-containers >= 0.2 && < 0.3
                 , yaml >= 0.8 && < 0.9

  ghc-options: -Wall
