  exposed-modules: Crypto.BCrypt
  include-dirs: csrc
  c-sources: csrc/crypt_blowfish.c csrc/crypt_blowfish_wrapper.c csrc/crypt_gensalt.c
  build-depends: bytestring == 0.9.*,
                 entropy < 0.3,
                 base < 5

