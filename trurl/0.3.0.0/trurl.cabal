cabal-version:       >=1.10

library
    
  exposed-modules:     Trurl
                     , SimpleParams
                     
  hs-source-dirs:      src
  build-depends:       base >= 4.7 && < 5
                     , http-conduit
                     , directory
                     , bytestring
                     , text
                     , tar
                     , hastache
                     , aeson
                     , scientific
                     , unordered-containers
                     , MissingH
                     , filemanip
                     , safe
                     
  default-language:    Haskell2010


executable trurl
