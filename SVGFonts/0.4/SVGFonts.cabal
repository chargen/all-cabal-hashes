        SVGPath == 1.0.*,
        split == 0.1.*,
        directory == 1.1.*,
        bytestring == 0.9.1.*,
        tga,
        tuple,
        collada-types >= 0.2,
        collada-output >= 0.5,
        triangulation >= 0.2
    exposed-modules:
        Graphics.SVGFonts.ReadFont
        Graphics.SVGFonts.RasterFont
Executable Fonts
