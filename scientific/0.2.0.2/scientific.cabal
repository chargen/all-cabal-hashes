  location: git://github.com/basvandijk/scientific.git

library
  exposed-modules:     Data.Scientific
  other-extensions:    DeriveDataTypeable, BangPatterns
  ghc-options:         -Wall
  build-depends:       base     >= 4.3   && < 4.8
                     , deepseq  >= 1.3   && < 1.4
                     , text     >= 0.8   && < 1.2
                     , hashable >= 1.1.2 && < 1.3
  hs-source-dirs:      src
  default-language:    Haskell2010

