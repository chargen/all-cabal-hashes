  HS-Source-Dirs: src
  Main-Is: Test.hs
  Build-Depends:
    base                 >= 4   && < 5,
    HUnit                >= 1.2 && < 1.3,
    test-framework       >= 0.8 && < 0.9,
    test-framework-hunit >= 0.3 && < 0.4
  Ghc-Options: -Wall



