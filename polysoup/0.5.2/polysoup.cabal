    build-depends:
        base            >= 4        && < 5
      , containers      >= 0.4      && < 0.6
      , tagsoup         >= 0.12     && < 0.14
      , polyparse       >= 1.9      && < 1.10

    exposed-modules:
        Text.XML.PolySoup
      , Text.XML.PolySoup.XmlTree
      , Text.XML.PolySoup.Predicate
      , Text.XML.PolySoup.Parser
      , Text.XML.PolySoup.Tag
      , Text.XML.PolySoup.Combine

