                     System.Certificate.X509.Unix
                     System.Certificate.X509.MacOS
  Other-modules:     Data.Certificate.X509.Internal
  ghc-options:       -Wall
  if os(windows)
     cpp-options: -DWINDOWS
     Build-Depends:  Win32
     Exposed-modules:  System.Certificate.X509.Win32
  if os(OSX)
     cpp-options: -DMACOSX

