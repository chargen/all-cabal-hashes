name:                pbc4hs
version:             0.1.1.0
synopsis:            pbc for HsLua
description:         pbc wrapper for HsLua
license:             BSD3
license-file:        LICENSE
author:              david feng
maintainer:          davidxifeng@gmail.com
category:            System
build-type:          Simple
cabal-version:       >=1.10
homepage:            https://github.com/DavidFeng/pbc4hs

extra-source-files:  cbits/alloc.h
                     cbits/array.h
                     cbits/bootstrap.h
                     cbits/context.h
                     cbits/descriptor.pbc.h
                     cbits/map.h
                     cbits/pattern.h
                     cbits/pbc.h
                     cbits/proto.h
                     cbits/stringpool.h
                     cbits/varint.h

source-repository head
  type:                 git
  location:             https://github.com/osa1/hslua.git

library
  exposed-modules:     Scripting.Lua.Pbc
  other-extensions:    ForeignFunctionInterface
  build-depends:       base >=4.6 && <4.7, hslua >=0.3 && <0.4
                       , string-qq >= 0.0.2
  hs-source-dirs:      src
  default-language:    Haskell2010

  include-dirs:        cbits
  c-sources:           cbits/alloc.c
                       cbits/array.c
                       cbits/bootstrap.c
                       cbits/context.c
                       cbits/decode.c
                       cbits/map.c
                       cbits/pattern.c
                       cbits/proto.c
                       cbits/register.c
                       cbits/rmessage.c
                       cbits/stringpool.c
                       cbits/varint.c
                       cbits/wmessage.c
                       cbits/pbc-lua.c
  cc-options:          -Wall


