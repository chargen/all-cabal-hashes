  default: False

Library
  default-language: Haskell98
  buildable: True 
  build-depends: failure >= 0.1 && < 0.3
               , transformers >= 0.2
               , transformers-base >= 0.4.1
               , monadloc >= 0.7
               , monad-control >= 1.0
               , lifted-base >= 0.2.1

  if flag(extensibleExceptions)
    build-depends:
      extensible-exceptions >= 0.1 && <0.2,
      base >= 3.0 && <4
  else
    build-depends:
      base >= 4 && < 5

