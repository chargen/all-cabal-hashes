  Build-depends: disassembler >= 0.1.0
  Exposed-Modules:
    Harpy,
    Harpy.X86CodeGen,
    Harpy.X86Assembler,
    Harpy.CodeGenMonad,
    Harpy.Call,
    Harpy.X86Disassembler,
    Harpy.X86CGCombinators
  Extensions: 
    ForeignFunctionInterface, MultiParamTypeClasses, 
    TemplateHaskell, CPP, FlexibleContexts, FlexibleInstances,
    RankNTypes
  Ghc-options: -O2 


