  default:     False

Library
  Build-Depends:   ghc,
                   base         < 5,
                   filepath,
                   haskell98,
                   containers,
                   parsec       >= 2.1.0,
                   Cabal        >= 1.5 && < 1.9
  Hs-Source-Dirs:  src
  Extensions:      CPP, PatternGuards
  Ghc-Options:      -Wall -fno-warn-orphans

  Exposed-modules:
        Text.LDIF
        Text.LDIF.Types
        Text.LDIF.Parser
        Text.LDIF.Printer
        Text.LDIF.Proc

Executable diffLDIF
  Hs-Source-Dirs:  src
  Main-Is:         diffLDIF.hs

Executable ldif2html
  Hs-Source-Dirs:  src
  Main-Is:         ldif2html.hs

Executable test
  Hs-Source-Dirs:  src, tests
  Main-Is:         TestMain.hs
  Build-Depends:   base, HUnit
  if !flag(test)
    Buildable:     False


