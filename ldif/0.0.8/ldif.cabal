                   base         < 5,
                   filepath,
                   containers,
                   cmdargs,
                   directory,
                   parsec       >= 2.1.0,
                   Cabal        >= 1.4
  Hs-Source-Dirs:  src
  Extensions:      CPP, PatternGuards
  Ghc-Options:      -Wall -fno-warn-orphans

  Exposed-modules:
        Text.LDIF
        Text.LDIF.Types
        Text.LDIF.Parser
        Text.LDIF.Printer
        Text.LDIF.Utils
        Text.LDIF.Diff
        Text.LDIF.Apply

Executable diffLDIF
  Hs-Source-Dirs:  src
  Main-Is:         diffLDIF.hs

Executable ldif2html
  Hs-Source-Dirs:  src
  Main-Is:         ldif2html.hs

Executable ldifmodify
  Hs-Source-Dirs:  src
  Main-Is:         ldifmodify.hs

Executable ldifparse
  Hs-Source-Dirs:  src
  Main-Is:         ldifparse.hs

Executable test
  Hs-Source-Dirs:  src, tests
  Main-Is:         TestMain.hs
  Build-Depends:   base, HUnit == 1.2.*
  if !flag(test)
    Buildable:     False


