    Build-Depends:
        base         >= 4       && < 5  ,
        pipes        >= 3.0     && < 3.4,
        stm          >= 2.4     && < 2.5
    Exposed-Modules:
        Control.Proxy.Concurrent,
        Control.Proxy.Concurrent.Tutorial
    GHC-Options: -O2


