    main-is: ../test.hs
    type: exitcode-stdio-1.0

    ghc-options:   -Wall
    build-depends: shakespeare-css  >= 0.10    && < 0.11
                 , shakespeare      >= 0.10    && < 0.11
                 , base             >= 4       && < 5
                 , HUnit
                 , hspec            >= 0.8     && < 0.10
