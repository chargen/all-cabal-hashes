  default-language: Haskell2010
  default-extensions:
    OverloadedStrings

  exposed-modules:
    Network.HTTP.Media
    Network.HTTP.Media.MediaType
  other-modules:
    Network.HTTP.Media.Match
    Network.HTTP.Media.MediaType.Internal
