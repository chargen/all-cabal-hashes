author:             Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
maintainer:         Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
copyright:          Copyright (C) 2014 Tony Morris
synopsis:           An executable and library to determine if a file is a DICOM file 
category:           System, Medical
description:       
  An executable and library to determine if a file is a DICOM file
  .
  Exit codes:
  .
  * 0 - is DICOM file
  .
  * 1 - is not a DICOM file
  .
  * 2 - file does not exist
  .
  * 3 - file is not readable
  .
  * 4 - file is a directory
homepage:           https://github.com/tonymorris/isdicom
bug-reports:        https://github.com/tonymorris/isdicom/issues
cabal-version:      >= 1.10
build-type:         Custom
extra-source-files: changelog

source-repository   head
  type:             git
  location:         git@github.com:tonymorris/isdicom.git

flag                small_base
  description:      Choose the new, split-up base package.

library
  default-language:
                    Haskell2010

  build-depends:
                      base < 5 && >= 3
                    , directory >= 1.2
                    , filepath >= 1.3

  ghc-options:
                    -Wall

  default-extensions:
                      NoImplicitPrelude

  hs-source-dirs:
                    src

  exposed-modules:
                    System.FilePath.Dicom

executable isdicom
  default-language:
                    Haskell2010

  hs-source-dirs:
                    src

  main-is:
                    Main.hs

  build-depends:
                      base < 5 && >= 3
                    , directory >= 1.2
                    , filepath >= 1.3

  ghc-options:
                    -Wall

  default-extensions:
                    NoImplicitPrelude

  other-modules:
                    System.FilePath.Dicom


test-suite doctests
  type:
                    exitcode-stdio-1.0

  main-is:
                    doctests.hs

  default-language:
                    Haskell2010

  build-depends:
                      base < 5 && >= 3
                    , doctest >= 0.9.7
                    , filepath >= 1.3
                    , directory >= 1.1
                    , QuickCheck >= 2.0
                    , template-haskell >= 2.8

  ghc-options:
                    -Wall
                    -threaded

  hs-source-dirs:
                    test


