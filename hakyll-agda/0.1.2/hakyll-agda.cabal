                      Agda >= 2.3 && < 3,
                      pandoc >= 1.10 && < 2,
                      xhtml >= 3000.2 && < 3000.3,
                      filepath >= 1.3 && < 2,
                      directory >= 1.1 && < 2,
                      containers >= 0.4.2 && < 0.6,
                      mtl >= 2.1 && < 3,
                      transformers >= 0.3 && < 0.4
    GHC-Options:      -Wall
    Exposed-Modules:  Hakyll.Web.Agda


