                      filepath >= 1.3 && < 2,
                      directory >= 1.1 && < 2,
                      containers >= 0.4.2 && < 0.5,
                      mtl >= 2.1 && < 3,
                      transformers >= 0.3 && < 0.4
    GHC-Options:      -Wall
    Exposed-Modules:  Hakyll.Web.Agda


