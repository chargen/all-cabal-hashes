  ghc-prof-options: -prof -auto-all
  build-depends:
    base,
    array,
    mtl,
    transformers,
    haskeline

test-suite test-fst
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: properties.hs
  build-depends:
    base,
    fst,
    QuickCheck


