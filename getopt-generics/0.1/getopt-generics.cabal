cabal-version: >= 1.8
build-type: Simple

library
  hs-source-dirs:
    src
  ghc-options:
    -Wall -fno-warn-name-shadowing
  exposed-modules:
    System.Console.GetOpt.Generics
  build-depends:
      base == 4.*
    , generics-sop
    , safe

test-suite spec
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    test, examples
  ghc-options:
    -Wall -threaded -fno-warn-name-shadowing -O0 -pgmL markdown-unlit
  main-is:
    Spec.hs
  build-depends:
      base == 4.*
    , getopt-generics
    , generics-sop

    , hspec
    , silently

