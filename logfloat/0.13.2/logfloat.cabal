    Hs-Source-Dirs:  src
    Exposed-Modules: Data.Number.LogFloat
                   , Data.Number.RealToFrac
                   , Data.Number.Transfinite
                   , Data.Number.PartialOrd
                   , Hugs.RealFloat
    
    Build-Depends: base  == 4.*
