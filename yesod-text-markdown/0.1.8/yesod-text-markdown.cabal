category:            Yesod
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:   Yesod.Text.Markdown
  build-depends:     base                 >= 4    && < 5
                   , markdown             >= 0.1  && < 2.0
                   , yesod-core           >= 1.2  && < 2.0
                   , yesod-form           >= 1.3  && < 2.0
                   , yesod-persistent     >= 1.2  && < 2.0
                   , persistent           >= 1.2  && < 3.0
                   , text                 >= 0.11 && < 2.0
                   , shakespeare          >= 2.0  && < 2.1
                   , aeson                >= 0.7  && < 1.0
  ghc-options: -Wall -fno-warn-orphans

