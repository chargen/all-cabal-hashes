  build-depends:     base                 >= 4    && < 5
                   , markdown             >= 0.1  && < 2.0
                   , yesod-core           >= 1.2  && < 2.0
                   , yesod-form           >= 1.3  && < 2.0
                   , yesod-persistent     >= 1.2  && < 2.0
                   , persistent           >= 1.2  && < 3.0
