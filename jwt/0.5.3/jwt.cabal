                     , aeson                    >= 0.7
                     , containers               >= 0.5
                     , unordered-containers     >= 0.2
                     , scientific               >= 0.2
                     , data-default             >= 0.5
                     , http-types               >= 0.8
                     , time                     >= 1.1
                     , vector                   >= 0.7.1
                     , semigroups               >= 0.15.4

  if flag(network-uri)
    build-depends:     network-uri          >= 2.6
                     , network              >= 2.6
  else
    build-depends:     network-uri          >= 2.4 && < 2.6
                     , network              >= 2.4 && < 2.6

  hs-source-dirs:      src
  default-language:    Haskell2010
