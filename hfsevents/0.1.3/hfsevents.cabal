  if os(darwin)
    buildable: True
  else
    buildable: False
  frameworks: Cocoa
  C-sources: cbits/c_fsevents.c
  include-dirs: cbits
  extra-libraries: pthread
  build-depends:
    base >= 4 && < 5,
    bytestring,
    cereal >= 0.3 && < 0.4,
    unix,
    text



