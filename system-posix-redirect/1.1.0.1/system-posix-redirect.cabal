    location: https://github.com/liyang/system-posix-redirect

library
    exposed-modules:
        System.Posix.Redirect
    build-depends:
        base >= 4 && < 5,
        bytestring >= 0.9,
        unix >= 2.4.0
    ghc-options: -Wall
    c-sources: cbits/hsredirect.c
    include-dirs: include
    install-includes: include/hsredirect.h


