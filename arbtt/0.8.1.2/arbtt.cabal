test-suite test
  Type:
    exitcode-stdio-1.0
  Hs-source-dirs:
    tests
    src
  Main-is:
    test.hs
  Build-depends:
      base == 4.5.* || == 4.6.* || == 4.7.*
      , tasty == 0.7.* || == 0.8.*
      , tasty-golden >= 2.2.0.2  && <= 2.3
      , tasty-hunit == 0.2.* || == 0.4.* || == 0.8.* || == 0.9.*
      , HUnit == 1.2.*
      , process-extras == 0.2.*
      , deepseq
      , binary >= 0.5
      , bytestring
      , utf8-string
      , time
      , unix
      , directory
      , parsec == 3.*
      , containers == 0.5.*
      , pcre-light, old-locale
      , transformers
  default-language: Haskell98

