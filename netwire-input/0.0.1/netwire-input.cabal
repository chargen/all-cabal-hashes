author:              Pavel Krajcevski
maintainer:          Krajcevski@gmail.com
copyright:           Pavel Krajcevski, 2014
category:            Game
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >= 1.10

source-repository head
