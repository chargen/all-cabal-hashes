                 mtl >= 2.0,
                 fgl,
                 deepseq,
                 text,
                 transformers,
                 gtk == 0.12.*,
                 cairo == 0.12.*,
                 ghc-heap-view >= 0.3.0.2
  Hs-source-dirs: src/
  Ghc-options: -Wall -fno-warn-unused-do-bind

  if flag(graph)
