    Main-Is:         Spec.hs
    Hs-Source-Dirs:  test
    Type:            exitcode-stdio-1.0

    Ghc-Options:     -Wall -threaded
    Build-Depends:   base >= 4 && < 5
                   , bytestring
                   , directory
                   , fast-logger
                   , hspec

