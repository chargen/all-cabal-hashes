    config.log
    config.status
    configure
    include/hs_llvm_config.h
    llvm.buildinfo

library
  default-language: Haskell98
  build-depends:
    base >= 3 && < 5,
    bytestring >= 0.9,
    directory,
    mtl,
    process,
    type-level,
    containers

  ghc-options: -Wall

  if os(darwin)
    ld-options: -w 
    frameworks: vecLib
    cpp-options: -D__MACOS__

  exposed-modules:
      LLVM.Core
      LLVM.ExecutionEngine
      LLVM.FFI.Analysis
