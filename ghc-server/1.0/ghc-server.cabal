name:                ghc-server
version:             1.0
synopsis:            A server interface to GHC.
description:         A server interface to GHC.

                     Supported major GHC versions: 7.4, 7.6, 7.8
license:             BSD3
license-file:        LICENSE
stability:           Unstable
author:              Chris Done
maintainer:          chrisdone@gmail.com
category:            Development
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:   GHC.Server,
                     GHC.Server.IO,
                     GHC.Compat
  other-modules:     GHC.Server.Commands
                     GHC.Server.Server
                     GHC.Server.Client
                     GHC.Server.Slave
                     GHC.Server.Log
                     GHC.Server.Types
                     GHC.Server.Import
                     GHC.Server.Sexp
  hs-source-dirs:    src
  ghc-options:       -O2 -Wall
  if impl(ghc==7.2.*)
    build-depends: ghc > 7.4
  if impl(ghc>=7.4)
    build-depends:
      -- Hard versions
      ghc ==7.4.* || == 7.6.* || == 7.8.*,
      -- Ranged versions
      base >= 4 && < 5,
      -- Min versions
      text >= 0.10,
      ghc-paths >= 0.1,
      atto-lisp >= 0.2,
      bytestring >= 0.9,
      attoparsec >= 0.10,
      syb >= 0.4,
      -- Soft versions
      mtl,
      network,
      unix,
      async,
      conduit,
      conduit-extra

executable ghc-server
  main-is:           Main.hs
  hs-source-dirs:    src/main
  ghc-options:       -O2 -Wall -threaded
  build-depends:
                  base >= 4 && < 5
                , ghc-server
                , network


