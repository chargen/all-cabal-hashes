                     , apiary            >=0.11.3 && <0.15
                     , blaze-builder     >=0.3    && <0.4
  if flag(wai2apiary)
    build-depends:     wai-eventsource   >=2.0    && <3.0
                     , conduit           >=1.1    && <1.2
  else
    build-depends:     wai-extra         >=3.0    && <3.1

  hs-source-dirs:      src
  ghc-options:         -O2 -Wall
  default-language:    Haskell2010

source-repository head
  type:     git
  location: git://github.com/philopon/apiary.git
