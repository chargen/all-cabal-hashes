                   Hoodle.Type.Window
                   Hoodle.Type.HoodleState
                   Hoodle.Util
                   Hoodle.Util.Verbatim 
                   Hoodle.View.Coordinate
                   Hoodle.View.Draw
  Other-Modules: 
                   Paths_hoodle_core
  c-sources: 
                   csrc/c_initdevice.c
  include-dirs:    csrc
  install-includes: 
                   csrc/c_initdevice.h
                   csrc/template-hsc-gtk2hs.h
  cc-options:      -Wno-pointer-to-int-cast
  if flag(poppler)
    cpp-options: -DPOPPLER


