  build-depends:    array >= 0.3 && < 0.5,
                    base >= 4.2 && < 4.7,
                    containers >= 0.3 && < 0.6,
                    haskell-src-exts >= 1.14 && < 1.15,
                    -- mtl-2.1 contains a severe bug
