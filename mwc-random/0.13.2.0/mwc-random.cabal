    System.Random.MWC
    System.Random.MWC.Distributions
    System.Random.MWC.CondensedTable
  build-depends:
    base < 5,
    primitive < 0.6,
    time,
    vector >= 0.7
  if impl(ghc >= 6.10)
    build-depends:
      base >= 4

  -- gather extensive profiling data for now
  ghc-prof-options: -auto-all

  ghc-options: -Wall -funbox-strict-fields
  if impl(ghc >= 6.8)
    ghc-options: -fwarn-tabs

test-suite tests
