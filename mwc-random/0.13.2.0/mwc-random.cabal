  type:           exitcode-stdio-1.0
  hs-source-dirs: test
  main-is:        tests.hs
  other-modules:  KS
                  QC

  ghc-options:
    -Wall -threaded -rtsopts

  build-depends:
    vector >= 0.7,
    HUnit,
    QuickCheck,
    base,
    mwc-random,
    statistics >= 0.10.1.0,
    test-framework,
    test-framework-hunit,
    test-framework-quickcheck2

