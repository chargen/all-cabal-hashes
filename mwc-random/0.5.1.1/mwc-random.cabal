cabal-version:  >= 1.2
extra-source-files: README

library
  exposed-modules:
    System.Random.MWC
  build-depends:
    base < 4.8,
    primitive,
    time,
    vector >= 0.5
  if impl(ghc >= 6.10)
    build-depends:
      base >= 4

  -- gather extensive profiling data for now
  ghc-prof-options: -auto-all

  ghc-options: -Wall -funbox-strict-fields
  if impl(ghc >= 6.8)
    ghc-options: -fwarn-tabs


