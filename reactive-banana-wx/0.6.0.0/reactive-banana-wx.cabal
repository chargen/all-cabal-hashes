            random == 1.0.*,
            executable-path == 0.0.*,
            filepath >= 1.1 && <= 1.4
        cpp-options: -DbuildExamples
    else
        buildable: False
    hs-source-dirs:  src
    other-modules:   Paths_reactive_banana_wx, Paths
    main-is:         Asteroids.hs

Executable Counter
