synopsis:      Exotic comonad transformers
description:   Exotic comonad transformers
build-type:    Simple
extra-source-files: .travis.yml

source-repository head
  type: git
  location: git://github.com/ekmett/comonad-extras.git

library
  hs-source-dirs: src
  extensions: CPP

  other-extensions:
    FlexibleInstances
    MultiParamTypeClasses
    FunctionalDependencies
    UndecidableInstances
    Rank2Types
    MultiParamTypeClasses

  build-depends:
    array                >= 0.3   && < 0.6,
    base                 >= 4     && < 5,
    containers           >= 0.4   && < 0.6,
    comonad              >= 4     && < 5,
    distributive         >= 0.3.2 && < 1,
    semigroupoids        >= 4     && < 5,
    transformers         >= 0.2   && < 0.4

  exposed-modules:
    Control.Comonad.Store.Zipper
    Control.Comonad.Store.Pointer

  ghc-options: -Wall
  hs-source-dirs: src
