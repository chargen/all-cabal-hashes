Executable darcs-monitor
  Build-Depends: mtl, HaXml < 1.14
  if flag(splitBase)
    Build-Depends: base >=3 && < 5, containers, directory, process
  else
    Build-Depends: base < 3
  Main-Is: darcs-monitor.hs
  Other-Modules: Config Darcs EmailPatch PatchData
  GHC-Options: -Wall


