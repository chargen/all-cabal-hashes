  build-depends:         base <5
                       , array
                       , containers
                       , transformers
                       , time
                       , old-locale
                       , bytestring
                       , text
                       , dlist
                       , template-haskell
                       , sql-words
                       , names-th
                       , persistable-record

  hs-source-dirs:      src
  ghc-options:         -Wall

  default-language:     Haskell2010

