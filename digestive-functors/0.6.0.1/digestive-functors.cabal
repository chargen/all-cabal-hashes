      Text.Digestive.Tests.Fixtures
      Text.Digestive.View.Tests
  Ghc-options:    -Wall

  Build-depends:
    HUnit                >= 1.2 && < 1.3,
    test-framework       >= 0.4 && < 0.9,
    test-framework-hunit >= 0.2 && < 0.4,
