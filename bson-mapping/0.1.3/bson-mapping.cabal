                      template-haskell >= 2.5,
                      th-lift >= 0.5.3,
                      bson >= 0.1.3,
                      compact-string-fix >= 0.3.1

  hs-source-dirs:     src

  Exposed-modules:
    Data.Bson.Mapping

  Extensions: TemplateHaskell

  ghc-options:      -Wall


