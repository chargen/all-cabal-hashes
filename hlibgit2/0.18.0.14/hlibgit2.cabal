      libgit2/src/win32
  else
    cc-options: -D_GNU_SOURCE -DOPENSSL_SHA1 -Wno-deprecated-declarations
    c-sources:
      -- libgit2/src/hash/hash_generic.c
      libgit2/src/unix/map.c
      libgit2/src/unix/realpath.c
    include-dirs:
      libgit2/src/unix
    extra-libraries:
      ssl, crypto, pthread


