  type:    exitcode-stdio-1.0
  default-language:    Haskell2010
  ghc-options:     -Wall
  hs-source-dirs:  test
  main-is: Main.hs

  default-extensions: FlexibleInstances
                    , OverloadedStrings
                    , TemplateHaskell

  build-depends: base >=4.6 && < 5
               , QuickCheck
               , attoparsec
               , postgresql-query
               , quickcheck-assertions
               , quickcheck-instances
               , tasty
               , tasty-hunit
               , tasty-quickcheck
               , tasty-th
               , text
