                     , template-haskell
                     , parsec                     >= 2.0      && < 3.2
                     , containers

  Ghc-options:         -Wall

test-suite test
  main-is:             main.hs
  hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall
  build-depends:       hspec >= 1.3
                     , HUnit
                     , base >= 4 && < 5
                     , shakespeare
                     , xml-conduit
                     , text
                     , template-haskell
                     , parsec
                     , xml-hamlet
                     , containers


