                     , template-haskell
                     , parsec                     >= 2.0      && < 3.2

  Ghc-options:         -Wall

test-suite runtests
  main-is:             runtests.hs
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall
  build-depends:       hspec >= 0.6.1 && < 0.7
                     , HUnit                      >= 1.2      && < 1.3
                     , base >= 4 && < 5
                     , shakespeare                >= 0.10     && < 0.11
                     , xml-enumerator             >= 0.3.4    && < 0.4
                     , text                       >= 0.10     && < 1.0
                     , template-haskell
                     , parsec                     >= 2.0      && < 3.2


