  hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall
  build-depends:       hspec
                     , HUnit                      >= 1.2      && < 1.3
                     , base >= 4 && < 5
                     , shakespeare                >= 0.10     && < 0.11
                     , xml-conduit
                     , text                       >= 0.10     && < 1.0
                     , template-haskell
                     , parsec                     >= 2.0      && < 3.2
                     , xml-hamlet


