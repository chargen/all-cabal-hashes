                     , template-haskell
                     , parsec                     >= 2.0      && < 3.2

  Ghc-options:         -Wall

test-suite runtests
  main-is:             runtests.hs
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall
  build-depends:       hspec                      >= 0.6      && < 0.7
                     , HUnit                      >= 1.2      && < 1.3


