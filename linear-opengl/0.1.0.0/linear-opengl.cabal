  exposed-modules:     Linear.OpenGL
  build-depends:       base >=4.7 && <4.8,
                       linear >=1.10 && <1.11,
                       OpenGL >=2.9 && <2.10,
                       lens >=4.2 && <4.3
  hs-source-dirs:      src
  default-language:    Haskell2010


