cabal-version:       >=1.8

executable randfile
    main-is:         Main.hs
    other-modules:
        Stat
    build-depends:   base == 4.*
                   , filepath
                   , directory
                   , crypto-api
                   , transformers
                   , monadcryptorandom
    if os(windows) {
        build-depends: Win32
    } else {
        build-depends: unix
    }
    other-extensions:   CPP
    ghc-options:     -Wall


