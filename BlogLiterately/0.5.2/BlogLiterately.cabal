                   BlogLiterately,
                   cmdargs >= 0.9.5 && < 0.11,
                   utf8-string >= 0.3 && < 0.4
  Main-Is:        BlogLiterately.hs
  hs-source-dirs: main
  Ghc-Options:    -fwarn-unused-imports
