-- QuickCheck some basic properties about SmartCheck.
executable sc-qc
  Hs-source-dirs:    qc-tests
  Main-is:           Tests.hs
  Build-depends:     base >= 4.0 && < 5,
                     smartcheck >= 0.2,
                     QuickCheck >= 2.7,
                     mtl,
                     random >= 1.0.1.1,
                     containers >= 0.4,
                     generic-deriving >= 1.2.1,
                     ghc-prim
  Default-language:  Haskell2010
  Ghc-options:       -Wall


