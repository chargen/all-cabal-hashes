  build-depends:
      base >=4.6 && < 5
    , containers >= 0.5.0.0
    , bytestring >= 0.9.0
    , base64-bytestring >= 1.0.0.1
    , text >= 1.0.0.0 && < 1.3
    , http-types >= 0.8.0
    , http-client >= 0.3.0
    , http-client-tls >= 0.2.0.0
    , aeson >= 0.7.0.3 && < 0.9
    , lens >= 4.0
    , blaze-html >= 0.5.0.0
    , QuickCheck >= 2.6 && < 2.9
    , mtl < 3.0
    , time
    , email-validate >= 1.0.0
    , old-locale
  hs-source-dirs:
    src
  default-language:
    Haskell2010
  ghc-options:
    -funbox-strict-fields

