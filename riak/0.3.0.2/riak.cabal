    Network.Riak.Resolvable
    Network.Riak.Response
    Network.Riak.Types
    Network.Riak.Value
    Network.Riak.Value.Resolvable

  other-modules:       
    Network.Riak.Connection.Internal
    Network.Riak.Connection.NoPush
    Network.Riak.Resolvable.Internal
    Network.Riak.Tag
    Network.Riak.Types.Internal
  
  build-depends:       
    aeson >= 0.2.0.0,
    attoparsec >= 0.8.5.0,
    base == 4.*,
    binary,
    blaze-builder,
    bytestring,
    containers,
    hashable >= 1.0.1.2,
    network >= 2.3,
    protocol-buffers >= 1.8.0,
    pureMD5,
    random,
    riak-protobuf >= 0.14.0.0,
    stm,
    time,
    vector >= 0.7

  if flag(debug)
    cpp-options: -DASSERTS -DDEBUG

  if flag(developer)
    ghc-options: -Werror
    ghc-prof-options: -auto-all
    cpp-options: -DASSERTS -DDEBUG

  ghc-options: -Wall

