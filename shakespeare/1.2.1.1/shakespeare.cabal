    build-depends:   base             >= 4       && < 5
                   , time             >= 1
                   , system-filepath  >= 0.4
                   , system-fileio    >= 0.3
                   , containers
                   , template-haskell
                   , parsec           >= 2       && < 4
                   , text             >= 0.7
                   , process          >= 1.0
                   , ghc-prim

    exposed-modules: 
                     Text.Shakespeare
                     Text.Shakespeare.Base
    ghc-options:     -Wall

