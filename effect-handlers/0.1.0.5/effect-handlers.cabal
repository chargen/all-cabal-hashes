  default-language:    Haskell2010
  hs-source-dirs:      test

  main-is:             Main.hs

  build-depends:       base >=4.7 && <5
                     , effect-handlers
                     , hspec >= 2.1 && <2.2
                     , QuickCheck
                     , HUnit
                     , hspec-discover

  other-modules:      Main
                    , Spec
                

  default-extensions:  DataKinds
                     , FlexibleContexts
                     , NoMonomorphismRestriction


benchmark benchm
  type:                exitcode-stdio-1.0
  default-language:    Haskell2010 
  hs-source-dirs:      bench, test
  main-is:             TestBench.hs
  build-depends:       base >=4.7 && <5
                     , effect-handlers
                     , criterion >= 1.0 && <1.2
  ghc-options:         -O3
  default-extensions:  DataKinds
                     , FlexibleContexts
                     , NoMonomorphismRestriction
  


