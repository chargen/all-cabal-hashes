  branch:              master
  tag:                 v0.4.2.0

library
  default-language:    Haskell2010
  default-extensions:  PatternGuards
  hs-source-dirs:      src
  exposed-modules:     Data.BEncode
                     , Data.BEncode.BDict
                     , Data.BEncode.Internal
                     , Data.BEncode.Types
  build-depends:       base       == 4.*
                     , ghc-prim
                     , deepseq    == 1.3.*
                     , mtl

                     , attoparsec >= 0.10
                     , bytestring >= 0.10.0.2
                     , text       >= 0.11
                     , pretty
  ghc-options:         -Wall -O2 -fno-warn-unused-do-bind


