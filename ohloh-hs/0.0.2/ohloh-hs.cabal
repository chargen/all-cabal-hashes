  main-is:          cmdoh.hs
  hs-source-dirs:   . tools
  ghc-options:      -Wall
                    -fno-warn-missing-signatures
                    -fno-warn-name-shadowing
  build-depends:    base >= 4 && < 5,
                    data-lens,
                    hxt,
                    hxt-curl,
                    cmdargs,
                    pretty-show,
                    text-format-simple

