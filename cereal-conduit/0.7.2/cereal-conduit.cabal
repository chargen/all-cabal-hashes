library
    build-depends: base         >= 4       && < 5
                 , conduit      >= 1.0.0   && < 1.1
                 , cereal       >= 0.4.0.0 && < 0.5
                 , bytestring
                 , transformers >= 0.2.0.0
    exposed-modules: Data.Conduit.Cereal
                   , Data.Conduit.Cereal.Internal
    ghc-options:     -Wall

Test-Suite test-cereal-conduit
    type: exitcode-stdio-1.0
    main-is: Test/Main.hs
    build-depends: base
                 , conduit
                 , cereal
                 , bytestring
                 --, test-framework-hunit
                 , HUnit
                 , resourcet
                 , mtl
                 , transformers

