      shake                >= 0.13 && <0.15,
      text                 >= 0.11 && <1.3,
      unordered-containers >= 0.2  && <0.3,
      split                >= 0.2  && <0.3,
      vector               >= 0.10 && <0.11,
      cassava              >= 0.4  && <0.5,
      yaml                 >= 0.8  && <0.9,
      aeson                >= 0.7  && <0.9

  hs-source-dirs: src

  default-language: Haskell2010

