    base ==4.*,
    stm >= 2.3,
    containers,
    mtl,
    tagged >= 0.5,
    regex-posix,
    optparse-applicative >= 0.6 && < 0.10,
    deepseq >= 1.3

  if flag(colors)
    build-depends: ansi-terminal
    cpp-options: -DCOLORS
