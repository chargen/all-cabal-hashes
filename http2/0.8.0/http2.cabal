  Default-Language:     Haskell2010
  HS-Source-Dirs:       test-hpack, .
  GHC-Options:          -Wall
  if flag(devel)
    Buildable:          True
  else
    Buildable:          False
  Main-Is:              hpack-stat.hs
  Build-Depends:        base >= 4 && < 5
                      , PSQueue
                      , aeson
                      , aeson-pretty
                      , array
                      , blaze-builder
                      , bytestring
                      , containers
                      , directory
                      , filepath
                      , text
                      , unordered-containers
                      , vector
                      , word8

Executable frame-encode
  Default-Language:     Haskell2010
  HS-Source-Dirs:       test-frame
  GHC-Options:          -Wall
  if flag(devel)
    Buildable:          True
  else
    Buildable:          False
  Main-Is:              frame-encode.hs
  Other-Modules:        Case
                        JSON
  Build-Depends:        base >= 4 && < 5
                      , aeson
                      , aeson-pretty
                      , bytestring
                      , hex
                      , http2
                      , text
                      , unordered-containers


