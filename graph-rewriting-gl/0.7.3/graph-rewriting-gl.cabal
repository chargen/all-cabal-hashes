  Build-Depends:
    base >= 4 && < 4.6,
    base-unicode-symbols >= 0.2 && < 0.3,
    graph-rewriting >= 0.7 && < 0.8,
    graph-rewriting-layout >= 0.4 && < 0.6,
    GLUT >= 2.2 && < 2.5,
    OpenGL >= 2.4 && < 2.9,
    containers >= 0.3 && < 0.5,
    AC-Vector >= 2.3 && < 2.4
  Exposed-Modules:
