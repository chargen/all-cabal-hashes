                       Diagrams.Align,
                       Diagrams.Combinators,
                       Diagrams.Attributes,
                       Diagrams.Segment,
                       Diagrams.Path,
                       Diagrams.Solve,
                       Diagrams.TwoD,
                       Diagrams.TwoD.Types,
                       Diagrams.TwoD.Align,
                       Diagrams.TwoD.Combinators,
                       Diagrams.TwoD.Transform,
                       Diagrams.TwoD.Ellipse,
