                 , HUnit
                 , hspec >= 1.3
                 , data-default-class
                 , connection >= 0.2
                 , warp-tls
                 , time
                 , blaze-builder
                 , bytestring
                 , text
                 , transformers
                 , conduit
                 , utf8-string
                 , case-insensitive
                 , lifted-base
                 , network
                 , wai >= 2.0 && < 2.2
                 , warp >= 2.0 && < 2.2
                 , http-types
                 , cookie
                 , network-conduit >= 0.6
                 , http-client
                 , http-conduit
                 , http-client-multipart

