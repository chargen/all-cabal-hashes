    exposed-modules:
                    Data.LensRef.TestEnv
                    Data.LensRef.Test

  ghc-options: 
                    -Wall 
                    -fno-warn-incomplete-patterns 
                    -fno-warn-name-shadowing 
                    -fno-warn-missing-signatures 
                    -fno-warn-orphans
                    -fno-warn-type-defaults

test-suite runtests

  type:             exitcode-stdio-1.0
  main-is:          runtests.hs
  build-depends:
                    base < 5
                  , lensref


