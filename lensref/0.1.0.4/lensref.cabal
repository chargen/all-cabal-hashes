build-type:         Simple
extra-source-files: changelog

source-repository head
  type:             git
  location:         https://github.com/divipp/lensref.git

Flag Pure
  Description:      Use the pure but slow implementation
  Default:          False


library

  hs-source-dirs:
                    src
  build-depends:
                    base < 5
                  , transformers < 0.5
                  , mtl < 2.3
                  , monad-control < 0.4
                  , operational < 0.3
                  , lens < 4.2
                  , containers < 0.6

  exposed-modules:
                    Data.LensRef
                    Data.LensRef.Common
                    Data.LensRef.TestEnv
                    Data.LensRef.Test
                    Data.LensRef.Pure
                    Data.LensRef.Fast
                    Data.LensRef.Default
  if flag(Pure)
    cpp-options:
                    -D__PURE__

  ghc-options: 
                    -threaded
                    -Wall 
                    -fno-warn-incomplete-patterns 
                    -fno-warn-name-shadowing 
                    -fno-warn-missing-signatures 
                    -fno-warn-orphans
                    -fno-warn-type-defaults



