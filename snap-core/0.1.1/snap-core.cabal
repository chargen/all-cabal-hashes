Flag debug
  Description: Enable debug logging to stderr
  Default: False

Flag testsuite
  Description: Are we running the testsuite? Causes arguments to \"debug\" to
               be evaluated but not printed.
  Default: False

Library
  hs-source-dirs: src

  if flag(debug)
    cpp-options: -DDEBUG

  if flag(testsuite)
    cpp-options: -DDEBUG_TEST

  c-sources: cbits/timefuncs.c
  include-dirs: cbits

  exposed-modules:
    Data.CIByteString,
    Snap.Types,
    Snap.Iteratee,
    Snap.Internal.Debug,
    Snap.Internal.Http.Types,
    Snap.Internal.Iteratee.Debug,
    Snap.Util.FileServe,
    Snap.Util.GZip

  other-modules:
