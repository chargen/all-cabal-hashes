  main-is: test.hs
  hs-source-dirs: src, test
  ghc-options: -Wall

  build-depends: base                       >= 3.0.3.1 && < 4.5
               , base-unicode-symbols       >= 0.2.2   && < 0.3
               , containers                 >= 0.4     && < 0.5
               , containers-unicode-symbols >= 0.3     && < 0.4
               , fingertree                 >= 0.0.1   && < 0.1
               , HUnit                      >= 1.2.2   && < 1.3
               , test-framework             >= 0.3.3   && < 0.5
               , test-framework-hunit       >= 0.2.6   && < 0.3


