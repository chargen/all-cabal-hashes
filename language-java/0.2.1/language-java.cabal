  type:                 git
  location:             git://github.com/vincenthz/language-java

Library
  Build-Tools:          alex >= 2.3
  Build-Depends:        base >= 4 && < 5
                      , array >= 0.1
                      , pretty >= 1.0
                      , cpphs >= 1.3
                      , parsec >= 3.0

  if impl(ghc < 7.6)
    Build-Depends:      syb

  Exposed-modules:      Language.Java.Lexer,
                        Language.Java.Syntax,
                        Language.Java.Parser,
                        Language.Java.Pretty
  
  Other-modules:	


