                       FRP.Spice.Config
                       FRP.Spice.Engine
                       FRP.Spice.Game
                       FRP.Spice.Input
                       FRP.Spice.Input.Keyboard
                       FRP.Spice.Input.Mouse
                       FRP.Spice.Input.MousePosition
                       FRP.Spice.Math.Vector

  hs-source-dirs:      src/

  build-depends:       base         == 4.7.*
               ,       elerea       == 2.7.*
               ,       GLFW         == 0.5.*
               ,       containers   == 0.5.*
               ,       data-default == 0.5.*
               ,       OpenGL

  default-language:    Haskell2010


