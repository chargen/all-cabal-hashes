  Build-depends:       base                     >= 4.3          && < 5
                     , bifunctors
                     , bytestring
                     , chunked-data
                     , containers
                     , either
                     , exceptions
                     , filepath
                     , lifted-async
                     , lifted-base              >= 0.1
                     , mmorph
                     , monad-control            >= 0.3.1        && < 0.4
                     , mono-traversable
                     , mtl
                     , mwc-random
                     , primitive
                     , streaming-commons
                     , text
                     , transformers             >= 0.2.2        && < 0.5
                     , transformers-base        >= 0.4.1        && < 0.5
                     , vector
                     , void                     >= 0.5.5
  ghc-options:     -Wall

