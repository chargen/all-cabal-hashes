category:            Language
build-type:          Simple
cabal-version:       >=1.10
synopsis:            Haskell source code analyzer
description:         Simple package for detecting usage of certain Haskell features on a module source code

library
  default-language:    Haskell2010
  ghc-options:
      -Wall
      -fno-warn-missing-signatures
  hs-source-dirs:
      src
  exposed-modules:
    Language.Haskell.Explorer
    Language.Haskell.Detector
    Language.Haskell.Inspector
    Language.Haskell.Inspector.Smell
  build-depends:
    base                      >= 4     && < 5,
    haskell-src               >= 1     && < 1.1

test-suite spec
  type:
      exitcode-stdio-1.0
  ghc-options:
      -Wall
      -fno-warn-missing-signatures
  hs-source-dirs:
      spec
  main-is:
      Spec.hs
  build-depends:
    base                      >= 4     && < 5,
    haskell-src               >= 1     && < 1.1,
    hspec                     >= 2     && < 3,
    hs-inspector


