                     , process
                     , lifted-base
                     , directory
                     , unix
                     , shelly
                     , http-conduit
  -- hs-source-dirs:      
  default-language:    Haskell2010
  ghc-options:       -Wall


executable test-sandbox-compose
  main-is: Main.hs            
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base        >= 4 && < 5
                     , test-sandbox-compose
                     , optparse-applicative
                     , aeson
                     , containers
                     , hastache
                     , text
                     , containers
                     , test-sandbox
                     , yaml
