  default-language:    Haskell2010
  ghc-options:       -Wall

test-suite test
    type:              exitcode-stdio-1.0
    main-is:           test.hs
    hs-source-dirs:    tests
    ghc-options:       -Wall

    build-depends:     base        >= 4 && < 5
