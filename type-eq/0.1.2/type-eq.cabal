        cpp-options: -DHAVE_DEPENDENCIES
        build-depends:
-- Semigroupoid
            semigroupoids >= 1.0 && < 1.4,
-- Groupoid
            groupoids     >= 0.1 && < 0.3
-- Tensor
--            data-lens     >= 2.9 && < 2.11

    if impl(ghc >= 7.2)
        other-extensions: Trustworthy

--    if impl(ghc >= 7.6)
--        exposed-modules:  Type.Eq.Poly
--        other-extensions: PolyKinds, Unsafe

    include-dirs: .

    ghc-options:
        -Wall


