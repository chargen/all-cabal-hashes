author:              Matvey Aksenov
maintainer:          matvey.aksenov@gmail.com
category:            System, Testing
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:
  README.md
  CHANGELOG.md

source-repository head
  type:     git
  location: https://github.com/supki/directory-layout

source-repository this
  type:     git
  location: https://github.com/supki/directory-layout
  tag:      0.6.1.0

library
  default-language:
    Haskell2010
  build-depends:
      base                 >= 4.6   && < 5
    , bifunctors           >= 4
    , bytestring
    , directory
    , filepath
    , free                 >= 4.7
    , hspec                >= 1.8
    , lens                 >= 4.0.1
    , semigroups           >= 0.12
    , template-haskell
    , text                 >= 0.11
    , transformers         >= 0.3
    , unix
    , unordered-containers >= 0.2.3
  exposed-modules:
    System.Directory.Layout
    System.Directory.Layout.Internal
    System.Directory.Layout.Interpreter
    System.Directory.Layout.QQ
  hs-source-dirs:
    src
  ghc-options:
    -Wall

test-suite doctest
  default-language:
    Haskell2010
  type:
    exitcode-stdio-1.0
  build-depends:
      base          == 4.*
    , directory
    , doctest
    , filepath
  hs-source-dirs:
    test
  main-is:
    Doctest.hs

test-suite spec
  default-language:
    Haskell2010
  type:
    exitcode-stdio-1.0
