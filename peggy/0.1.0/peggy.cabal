Cabal-version:       >=1.8

Library
  Exposed-modules:     Text.Peggy
                     , Text.Peggy.CodeGen.TH
                     , Text.Peggy.LeftRec
                     , Text.Peggy.Normalize
                     , Text.Peggy.Parser
                     , Text.Peggy.Prim
                     , Text.Peggy.PrimST
                     , Text.Peggy.Quote
                     , Text.Peggy.SrcLoc
                     , Text.Peggy.Syntax
  
  Build-depends:       base >= 4 && < 5
                     , mtl >= 2.0 && < 2.1
                     , ListLike >= 3.1 && < 3.2
                     , hashtables >= 1.0 && < 1.1
                     , monad-control >= 0.2 && < 0.3
                     , parsec >= 3.1 && < 3.2
                     , template-haskell >= 2.5 && < 2.7
                     , haskell-src-meta >= 0.5 && < 0.6
  
  -- Other-modules:       
  
Executable peggy
  Main-is:             Main.hs

  Build-depends:       base >= 4 && < 5
                     , mtl >= 2.0 && < 2.1
                     , ListLike >= 3.1 && < 3.2
