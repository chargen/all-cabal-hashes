        , cql                == 3.0.*
        , data-default-class
        , exceptions         >= 0.4     && < 1.0
        , hashable           >= 1.2     && < 2.0
        , iproute            >= 1.3     && < 1.4
        , lens               >= 4.4     && < 5.0
        , monad-control      >= 0.3     && < 1.0
        , mtl                >= 2.1     && < 2.5
        , mwc-random         >= 0.13    && < 0.14
