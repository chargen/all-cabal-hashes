        , bytestring         >= 0.10    && < 1.0
        , containers         >= 0.5     && < 1.0
        , cql                == 3.0.*
        , data-default-class
        , exceptions         >= 0.4     && < 1.0
        , hashable           >= 1.2     && < 2.0
        , iproute            >= 1.3     && < 1.4
        , lens               >= 4.4     && < 4.5
        , monad-control      >= 0.3     && < 1.0
        , mtl                >= 2.1     && < 2.3
        , mwc-random         >= 0.13    && < 0.14
        , network            >= 2.4     && < 3.0
        , semigroups         >= 0.15    && < 0.16
        , stm                >= 2.4     && < 3.0
        , text               >= 0.11    && < 2.0
        , tinylog            >= 0.8     && < 0.11
        , time               >= 1.4     && < 2.0
