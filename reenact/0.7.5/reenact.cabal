    build-depends: 
        base       >= 4 && < 5,
        stm,
        time,
        hamid      >= 0.6,
        HCodecs    >= 0.2.2,
        -- hosc       == 0.13,
        -- semigroups,
        -- semigroupoids,
        vector-space
    hs-source-dirs: src
    exposed-modules:
        Control.Reactive
        Control.Reactive.Chan
        Control.Reactive.Var
        Control.Reactive.Midi
        -- Control.Reactive.Osc
    other-modules:
