  src/Common/Utils.lhs

  doc/Breakout.html
  doc/Breakout.png
  doc/Chase.html
  doc/hscolour.css
  doc/Makefile

Executable elerea-breakout
  Executable:        elerea-breakout
  HS-Source-Dirs:    src
  Main-IS:           Breakout.lhs
  Build-Depends:     base, elerea, OpenGL, GLFW
  GHC-Options:       -O2

Executable elerea-chase
