synopsis:           A replacement for System.Exit and System.Process
category:           System
description:        Specifically, this library replaces @System.Exit.ExitCode@ with an abstract data type.
homepage:           https://github.com/tonymorris/system-command
bug-reports:        https://github.com/tonymorris/system-command/issues
cabal-version:      >= 1.10
build-type:         Custom

source-repository   head
  type:             git
  location:         git@github.com:tonymorris/system-command.git

flag                small_base
  description:      Choose the new, split-up base package.

library
  default-language:
                    Haskell2010

  build-depends:
                    base < 5 && >= 4
                    , process >= 1.0
                    , directory >= 1.1
                    , transformers >= 0.3.0.0
                    , filepath >= 1.3

  ghc-options:
                    -Wall

  default-extensions:
                      NoImplicitPrelude

  hs-source-dirs:
                    src

  exposed-modules:
                    System.Command
                    System.Command.Monad

test-suite doctests
  type:
                    exitcode-stdio-1.0

  main-is:
                    doctests.hs

  default-language:
                    Haskell2010

  build-depends:
                    base < 5 && >= 3,
                    doctest >= 0.9.7,
                    filepath >= 1.3,
                    directory >= 1.1,
                    QuickCheck >= 2.0

  ghc-options:
                    -Wall
                    -threaded

  hs-source-dirs:
                    test
