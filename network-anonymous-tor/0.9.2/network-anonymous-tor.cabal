                       Network.Anonymous.Tor.Error
                       Network.Anonymous.Tor.Protocol
                       Network.Anonymous.Tor.Protocol.Types
                       Network.Anonymous.Tor.Protocol.Parser
                       Network.Anonymous.Tor.Protocol.Parser.Ast

  build-depends:       base                     >= 4.3          && < 5
                     , transformers
                     
                     , network
                     , network-simple
                     , socks

                     , attoparsec
                     , network-attoparsec
                     , exceptions
                     , hexstring
                     , base32string

                     , text
                     , bytestring

