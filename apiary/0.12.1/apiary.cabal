                       Control.Monad.Apiary.Action.Internal
                       Control.Monad.Apiary.Filter.Internal.Capture
                       Control.Monad.Apiary.Filter.Internal.Capture.TH
                       Web.Apiary.TH
  other-extensions:    KindSignatures
                     , DataKinds
                     , TypeOperators
                     , GADTs
                     , TypeFamilies

                     , Rank2Types
                       
