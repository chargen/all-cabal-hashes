                     , blaze-builder        >=0.3   && <0.4
                     , data-default-class   >=0.0   && <0.1
                     , reflection           >=1.4   && <1.5

                     , http-types           >=0.8   && <0.9
                     , mime-types           >=0.1   && <0.2
                     , exceptions           >=0.6   && <0.7
                     , blaze-html           >=0.7   && <0.8

  if impl(ghc < 7.8)
    build-depends:     tagged               >=0.7   && <0.8

  if flag(wai3)
    build-depends:     wai                  >=3.0   && <3.1
                     , wai-extra            >=3.0   && <3.1
    cpp-options:       -DWAI3
  else
    build-depends:     wai                  >=2.1   && <2.2
                     , wai-extra            >=2.1   && <2.2
                     , conduit              >=1.1   && <1.2

  hs-source-dirs:      src
  ghc-options:         -O2 -Wall
  default-language:    Haskell2010

