                     , bytestring           >=0.10  && <0.11
                     , blaze-builder        >=0.3   && <0.4
                     , data-default-class   >=0.0   && <0.1
                     , reflection           >=1.4   && <1.6

                     , http-types           >=0.8   && <0.9
                     , mime-types           >=0.1   && <0.2
