        base == 4.*,
        resourcet == 0.4.*,
        lifted-base == 0.2.*,
        text == 0.11.*,
        bytestring >= 0.9.1 && < 0.11,
        postgresql-simple == 0.3.*,
        http-conduit == 2.*,
        mime-mail == 0.4.*,
        mime-mail-ses == 0.2.*,
        time >= 1.1 && < 1.5

