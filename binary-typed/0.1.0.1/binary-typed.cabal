      type:                exitcode-stdio-1.0
      build-depends:       base             >= 4.7 && < 5
                         , binary           >= 0.7
                         , binary-typed
                         , tasty            >= 0.8
                         , tasty-hunit      >= 0.8
                         , tasty-quickcheck >= 0.8



