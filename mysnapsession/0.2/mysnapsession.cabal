  Build-depends:
    base == 4.*,
    bytestring >= 0.9.1 && < 0.10,
    mtl == 2.*,
    snap == 0.3.*,
    snap-core == 0.3.*,
    time >= 1.1 && < 1.3,
    random == 1.0.*,
    containers >= 0.3 && < 0.5,
    regex-posix == 0.94.*,
    clientsession == 0.4.*,
    cereal == 0.3.*
  Exposed-modules: Snap.Extension.Session,
                   Snap.Extension.Session.Memory,
                   Snap.Extension.Session.Client,
                   Snap.SessionUtil,
                   Snap.Dialogues

