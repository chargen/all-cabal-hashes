                      ,lens                  >=4.6     && <5.0
                      ,mtl                   >=2.1     && <3.0
                      ,pipes                 >=4.1.3   && <5.0
                      ,pipes-http            >=1.0.1   && <2.0
                      ,semigroups            >=0.15.4  && <1.0
                      ,semigroupoids         >=4.2     && <5.0
                      ,text                  >=1.2     && <2.0
