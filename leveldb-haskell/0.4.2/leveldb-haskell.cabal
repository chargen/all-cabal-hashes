  build-depends:    base
                  , bytestring
                  , data-default
                  , directory
                  , exceptions       == 0.6.*
                  , mtl
                  , leveldb-haskell
                  , QuickCheck       == 2.7.*
                  , tasty            == 0.10.*
                  , tasty-quickcheck == 0.8.*
                  , temporary
                  , transformers

  ghc-options:      -Wall -O -rtsopts -threaded -with-rtsopts=-N
