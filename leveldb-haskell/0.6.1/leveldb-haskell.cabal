test-suite leveldb-properties
  type:             exitcode-stdio-1.0
  main-is:          Main.hs
  hs-source-dirs:   test

  other-modules:    Test.Streaming

  default-language: Haskell2010

  build-depends:    base
                  , bytestring
                  , data-default
                  , directory
                  , exceptions       == 0.6.*
                  , mtl
                  , leveldb-haskell
                  , QuickCheck       == 2.7.*
                  , tasty            == 0.10.*
                  , tasty-quickcheck == 0.8.*
                  , temporary
                  , transformers

  ghc-options:      -Wall -O -rtsopts -threaded -with-rtsopts=-N
