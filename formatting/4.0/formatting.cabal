                     Formatting.Holey,
                     Formatting.Formatters,
                     Formatting.ShortFormatters,
                     Formatting.Examples,
                     Formatting.Time,
                     Formatting.Internal
  build-depends:     base >= 4 && < 5,
                     text-format,
                     text,
                     time,
                     old-locale
  hs-source-dirs:    src
  ghc-options:       -O2

