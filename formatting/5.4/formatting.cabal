                     Formatting.Holey,
                     Formatting.Formatters,
                     Formatting.ShortFormatters,
                     Formatting.Examples,
                     Formatting.Time,
                     Formatting.Internal
  build-depends:     base >= 4 && < 5,
                     text-format,
                     text >= 0.11.0.8,
                     time,
                     old-locale,
                     scientific >= 0.3.0.0
  hs-source-dirs:    src
  ghc-options:       -O2

