                       containers >= 0.3,
                       transformers >= 0.2,
                       mtl >= 2,
                       parsec >= 3.1.1,
                       blaze-html == 0.5.*,
                       blaze-markup == 0.5.1.*,
                       deepseq,
                       cmdargs,
                       pandoc,
                       bytestring,
                       hjsmin,
                       indents,
                       filepath

