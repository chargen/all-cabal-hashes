  other-modules:       Ast,
                       CompileToJS,
                       Cases,
                       Substitute,
                       ExtractNoscript,
                       GenerateHtml,
                       Guid,
                       Optimize,
                       Initialize,
                       Rename,
                       Binops,
                       Patterns,
