  Hs-Source-Dirs:      src, src/Parse, src/Types, src/Gen
  other-modules:       Ast,
                       CompileToJS,
                       Cases,
                       Substitute,
                       ExtractNoscript,
                       GenerateHtml,
                       Guid,
                       Optimize,
                       Initialize,
                       Rename,
                       Binops,
                       Patterns,
                       Parser,
                       ParseLib,
                       ParseExpr,
                       ParseTypes,
                       ParseModules,
                       ParseForeign,
                       Types,
                       Types.Constrain,
                       Types.Hints,
                       Types.Substitutions,
                       Types.Unify,
                       Paths_Elm

  Build-depends:       base >=4.2 && <5,
                       containers >= 0.3,
                       transformers >= 0.2,
                       mtl >= 2,
                       parsec >= 3.1.1,
                       blaze-html == 0.5.0.*,
                       blaze-markup == 0.5.1.*,
                       deepseq,
                       cmdargs,
                       pandoc,
                       bytestring,
                       hjsmin


