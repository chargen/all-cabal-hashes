                        network >= 2.1 && < 2.4,
                        filepath >= 1.0 && < 1.4,
                        utf8-string >= 0.3.1 && < 0.4,
                        old-locale >= 1.0 && < 2.0,
                        time >= 1.1 && < 2.0,
                        containers >= 0.3 && < 0.5
