Library
  Build-depends: base >= 4 && < 5, Cabal >= 1.10 && < 2, deepseq, directory, filepath, process
  Extensions:
  Ghc-options: -Wall
  Exposed-Modules: Test.TBC
  Other-modules:
    Test.TBC.Convention
    Test.TBC.Core
    Test.TBC.Drivers
    Test.TBC.Renderers

Executable tbc
  Build-depends: base, Cabal, directory, filepath, process, unix
  Extensions:
  Ghc-options: -Wall
  main-is: Test/Main.hs


