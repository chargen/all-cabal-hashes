    hs-source-dirs:    tests/
    main-is:           Main.hs
    type:              exitcode-stdio-1.0
    build-depends:     base >= 4.7 && < 4.8
                     , attoparsec
                     , hspec
                     , text
                     , regex-pcre-builtin
                     , html-email-validate
                     , QuickCheck
    default-language:  Haskell2010

benchmark bench
