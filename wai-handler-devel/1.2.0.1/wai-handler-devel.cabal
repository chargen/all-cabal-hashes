                   , wai                   >= 1.2           && < 1.3
                   , wai-extra             >= 1.2           && < 1.3
                   , http-types            >= 0.6           && < 0.7
                   , warp                  >= 1.2           && < 1.3
                   , directory                >= 1.0.1 && < 1.2
                   , network                  >= 2.2.1.5 && < 2.4
                   , bytestring                >= 0.9.1.4  && < 0.10
