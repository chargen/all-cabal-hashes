    location: https://bitbucket.org/wuzzeb/yesod-auth-account

library
    hs-source-dirs:  .
    exposed-modules: Yesod.Auth.Account, Yesod.Auth.Account.Message
    ghc-options:   -Wall -O2

    build-depends: base              >= 4          && < 5
