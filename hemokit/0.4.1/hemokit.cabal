  hs-source-dirs:
    test
  main-is:
    Tests.hs
  build-depends:
      base
    , hemokit
    , bytestring             >= 0.9.2.1
    , HUnit                  >= 1.2
    , vector                 >= 0.9
  ghc-options: -Wall


benchmark bench
