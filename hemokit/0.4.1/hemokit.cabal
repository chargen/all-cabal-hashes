      base
    , hemokit
    , aeson                  >= 0.6.1.0
    , base64-bytestring      >= 1.0.0.1
    , bytestring             >= 0.9.2.1
    , optparse-applicative   >= 0.5.2.1
    , pretty-show            >= 1.0
    , split                  >= 0.2.2
    , transformers           >= 0.3.0.0
    , websockets             >= 0.7.3.0
  ghc-options: -Wall


executable hemokit-fft
  default-language: Haskell2010
  hs-source-dirs:
    apps
  main-is:
    FFT.hs
  build-depends:
      base
    , hemokit
    , conduit
    , mtl                     >= 2.1.2
    , pretty-show             >= 1.0
    , vector                  >= 0.9
