  Include-Dirs:         include

  Build-depends:        accelerate              >= 0.12.1 && < 0.13,
                        array                   >= 0.3,
                        base                    == 4.*,
                        binary                  >= 0.5,
                        blaze-builder           >= 0.3,
                        bytestring              >= 0.9,
                        containers              >= 0.4,
                        cryptohash              >= 0.7,
                        cuda                    >= 0.4.1,
