                   bytestring          >  0.8     && < 0.12,
                   crypto-api          >= 0.10    && < 0.14,
                   crypto-pubkey-types >= 0.2     && < 0.6,
                   SHA                 >= 1.6.4.1 && < 2.0,
                   tagged              >= 0.8.0.1 && < 1.0
  if flag(gmp)
    build-depends: ghc-prim            >= 0.3.1.0 && < 0.7,
                   integer-gmp         >= 0.5.1.0 && < 1.2
