  exposed-modules: Codec.Crypto.DSA,
                   Codec.Crypto.DSA.Pure,
                   Codec.Crypto.DSA.Exceptions
  GHC-Options:     -Wall -fno-warn-orphans
  extensions:      BangPatterns, CPP, MagicHash, MultiWayIf

