flag old-base
  description: Old, monolithic base
  default: False

library {
 Exposed-modules: Bamse.Builder,
                  Bamse.DiaWriter,
                  Bamse.Dialog,
                  Bamse.DialogUtils,
                  Bamse.GhcPackage,
                  Bamse.IMonad,
                  Bamse.MSIExtra,
                  Bamse.MSITable,
                  Bamse.Options,
                  Bamse.Package,
                  Bamse.PackageGen,
                  Bamse.PackageUtils,
