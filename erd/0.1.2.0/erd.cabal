  location: git://github.com/BurntSushi/erd.git

executable erd
  hs-source-dirs: src
  main-is: Main.hs
  ghc-options: -Wall -fno-warn-name-shadowing -fno-warn-unused-do-bind
  other-modules: Config, ER, Parse
  build-depends:
    base == 4.6.*
    , graphviz == 2999.16.*
    , text == 0.11.*
    , parsec == 3.1.*
    , containers == 0.5.*
    , bytestring == 0.10.*


