name:            hamlet
version:         0.10.3
license:         BSD3
license-file:    LICENSE
author:          Michael Snoyman <michael@snoyman.com>
maintainer:      Michael Snoyman <michael@snoyman.com>
synopsis:        Haml-like template files that are compile-time checked
description:
    Hamlet gives you a type-safe tool for generating HTML code. It works via Quasi-Quoting, and generating extremely efficient output code. The syntax is white-space sensitive, and it helps you avoid cross-site scripting issues and 404 errors. Please see the documentation at <http://docs.yesodweb.com/book/hamlet/> for more details.
    .
    Here is a quick overview of hamlet html. Due to haddock escaping issues, we can't properly show variable insertion, but we are still going to show some conditionals. Please see http://www.yesodweb.com/book/templates for a thorough description
    .
    > !!!
    > <html>
    >     <head>
    >         <title>Hamlet Demo
    >     <body>
    >         <h1>Information on John Doe
    >         <h2>
    >             $if isMarried person
    >                 Married
    >             $else
    >                 Not married
category:        Web, Yesod
stability:       Stable
cabal-version:   >= 1.8
build-type:      Simple
homepage:        http://www.yesodweb.com/book/templates
extra-source-files:
  test/double-foralls.hamlet
  test/external-debug.hamlet
  test/external-debug2.hamlet
  test/external-debug3.hamlet
  test/external.hamlet
  test/main.hs
  test/nonpolyhamlet.hamlet
  test/nonpolyhtml.hamlet
  test/nonpolyihamlet.hamlet
  test/tmp.hs

library
    build-depends:   base             >= 4       && < 5
                   , shakespeare      >= 0.10    && < 0.11
                   , bytestring       >= 0.9     && < 0.10
                   , template-haskell
                   , blaze-html       >= 0.4     && < 0.5
                   , parsec           >= 2       && < 4
                   , failure          >= 0.1     && < 0.2
                   , text             >= 0.7     && < 0.12
                   , containers       >= 0.2     && < 0.5
                   , blaze-builder    >= 0.2     && < 0.4
                   , process          >= 1.0     && < 1.2
    exposed-modules: Text.Hamlet
                     Text.Hamlet.RT
    other-modules:   Text.Hamlet.Parse
    ghc-options:     -Wall

test-suite test
    hs-source-dirs: test
    main-is: main.hs
    type: exitcode-stdio-1.0

    ghc-options:   -Wall
    build-depends: hamlet           >= 0.10    && < 0.11
                 , base             >= 4       && < 5
                 , parsec           >= 2       && < 4
                 , containers       >= 0.2     && < 0.5
                 , text             >= 0.7     && < 1
                 , HUnit
                 , hspec            >= 0.8     && < 0.9
                 , blaze-html       >= 0.4     && < 0.5


