                   , bytestring       >= 0.9     && < 0.10
                   , template-haskell
                   , blaze-html       >= 0.4     && < 0.5
                   , parsec           >= 2       && < 4
                   , failure          >= 0.1     && < 0.2
                   , text             >= 0.7     && < 0.12
                   , containers       >= 0.2     && < 0.5
                   , json-types       >= 0.1     && < 0.2
                   , json-enumerator  >= 0.0     && < 0.1
                   , blaze-builder    >= 0.2     && < 0.3
    exposed-modules: Text.Hamlet
                     Text.Hamlet.RT
                     Text.Cassius
                     Text.Julius
    other-modules:   Text.Hamlet.Parse
                     Text.Hamlet.Quasi
                     Text.Hamlet.Debug
                     Text.MkSizeType
                     Text.Shakespeare
    ghc-options:     -Wall

