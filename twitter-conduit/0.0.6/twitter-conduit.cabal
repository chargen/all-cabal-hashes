      , monad-control
      , bytestring
      , text
      , filepath
      , directory
      , process
      , case-insensitive
      , lens
      , aeson
      , data-default
      , resourcet
      , conduit
      , conduit-extra
      , http-conduit
      , monad-logger
      , authenticate-oauth
      , twitter-conduit
      , twitter-types

  if flag(network-uri)
    build-depends: network-uri >= 2.6
  else
    build-depends: network < 2.6

