  Build-Depends:     base >=4 && <5
                   , directory
                   , filepath
                   , unix
  Default-Language:  Haskell2010
  ghc-options:       -Wall

executable cabal-test-bin
  main-is:           Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:     base >=4 && <5
                   , directory
                   , filepath
                   , unix
                   , cabal-test-bin
  -- hs-source-dirs:      
  ghc-options:       -Wall
  default-language:  Haskell2010

test-suite test
  type:              exitcode-stdio-1.0
  main-is:           test.hs
  hs-source-dirs:    tests,dist/build/autogen
  ghc-options:       -Wall

  build-depends:     base
                   , hspec
                   , cabal-test-bin
                   , regex-posix
                   , process
  Default-Language:   Haskell2010


