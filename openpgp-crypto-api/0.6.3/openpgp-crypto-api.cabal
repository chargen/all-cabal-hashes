                base == 4.*,
                transformers,
                bytestring,
                binary >= 0.6.4.0,
                openpgp >= 0.6,
                crypto-api >= 0.12.2.2,
                tagged,
                cryptocipher >= 0.3.6 && <= 0.3.7,
                cryptohash <= 0.9.1,
                cereal

