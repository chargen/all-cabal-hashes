  build-depends:   base ==4.*,
                   base-unicode-symbols ==0.2.*,
                   binary == 0.5.* || == 0.6.* || == 0.7.*,
                   containers ==0.4.2.* || ==0.5.*,
                   grid >=6.1 && ==6.*,
                   MonadRandom ==0.1.*
  ghc-options:     -Wall
  exposed-modules: Data.Datamining.Clustering.SOM,
                   Data.Datamining.Clustering.SOMInternal,
