  exposed-modules:     Control.Monad.Logger
  build-depends:       base               >= 4         && < 5
                     , transformers
                     , text
                     , stm
                     , stm-chans
                     , lifted-base
                     , resourcet          >= 0.4       && < 1.2
                     , conduit            >= 1.0       && < 1.3
                     , conduit-extra      >= 1.0       && < 1.3
                     , fast-logger        >= 2.0       && < 2.3
                     , transformers-base
                     , monad-control < 1
                     , monad-loops
                     , mtl
                     , bytestring
                     , blaze-builder
                     , exceptions
