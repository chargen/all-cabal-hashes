                     , conduit-extra      >= 1.0       && < 1.3
                     , fast-logger        >= 2.0       && < 2.3
                     , transformers-base
                     , monad-control < 1
                     , monad-loops
                     , mtl
                     , bytestring
                     , blaze-builder
                     , exceptions
