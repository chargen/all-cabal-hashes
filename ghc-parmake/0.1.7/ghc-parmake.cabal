                        containers >= 0.4 && < 0.6,
                        process >= 1 && < 2, temporary >= 1 && < 2,
                        filepath >= 1 && < 2, directory >= 1.1 && < 2
  GHC-options:          -Wall
  if impl(ghc >= 6.8)
    GHC-options:        -fwarn-tabs

Executable ghc-parmake
