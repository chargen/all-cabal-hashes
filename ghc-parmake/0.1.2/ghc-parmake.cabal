                        test-framework >= 0.4.1 && < 0.5,
                        test-framework-quickcheck2 >= 0.2.10 && < 0.3,
                        test-framework-hunit >= 0.2.6 && < 0.3,
                        QuickCheck >= 2.4.1.1,
                        HUnit >= 1.2.2.0
  GHC-options:          -Wall -threaded -rtsopts

