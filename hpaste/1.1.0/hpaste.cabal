   ,css                       >= 0.1
   ,named-formlet             >= 0.2
   ,snap-app                  >= 0.4.0
   -- Free versions
   ,ConfigFile
   ,HJScript
   ,MissingH
   ,MonadCatchIO-transformers
   ,blaze-builder
   ,bytestring
   ,containers
   ,directory
   ,download-curl
   ,feed
   ,filepath
   ,haskell-src-exts
   ,hlint
   ,hscolour
   ,mtl
   ,network
   ,old-locale
   ,safe
   ,snap-core
   ,snap-server
   ,text
   ,time
   ,transformers
   ,utf8-string
   ,mime-mail
   ,cgi
   ,process
   ,postgresql-simple


