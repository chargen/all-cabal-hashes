build-type:       Simple
cabal-version:    >= 1.8

source-repository head
  type: git
  location: https://github.com/sol/setenv

library
  ghc-options:
      -Wall
  hs-source-dirs:
      src
  exposed-modules:
      System.SetEnv
  build-depends:
      base == 4.*
