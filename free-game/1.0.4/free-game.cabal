    free >= 4.6.1 && < 5,
    freetype2 >= 0.1,
    GLFW-b >= 1.3 && <2,
    hashable >= 1.2,
    JuicyPixels,
    JuicyPixels-util == 0.1.*,
    linear >= 1.0 && < 2,
    mtl >= 2.1,
    OpenGL == 2.9.*,
    OpenGLRaw == 1.4.*,
    random == 1.*,
    reflection == 1.*,
    template-haskell,
    transformers >= 0.3,
    vector >= 0.9 && <0.12,
    void >= 0.5,
    boundingboxes >= 0.1.1 && < 0.2,
    lens >= 3.8
