name:          language-c-quote
version:       0.3.1.1
cabal-version: >= 1.10
license:       BSD3
license-file:  LICENSE
copyright:     (c) 2006-2012 Harvard University
author:        Geoffrey Mainland <mainland@eecs.harvard.edu>
maintainer:    mainland@eecs.harvard.edu
stability:     alpha
homepage:      http://www.eecs.harvard.edu/~mainland/
category:      Language
synopsis:      C/CUDA/OpenCL quasiquoting library.
tested-with:   GHC==7.0.4, GHC==7.4.1

description:
  This package provides a general parser for the C language, including most GCC
  extensions and some CUDA and OpenCL extensions.

build-type: Custom

library
  default-language: Haskell98

  build-depends:
    array >=0.2 && <0.5,
    base >=4 && <5,
    bytestring >=0.9 && <0.10,
    containers >=0.4 && <0.5,
    exception-mtl >=0.3 && <0.4,
    exception-transformers >=0.3 && <0.4,
    filepath >=1.2 && <1.4,
    haskell-src-meta >= 0.4 && < 0.6,
    mainland-pretty >=0.1 && <0.2,
    mtl >=2.0 && <3,
    srcloc >=0.1 && <0.2,
    syb >=0.3 && <0.4,
    symbol >=0.1 && <0.2

  if impl(ghc >= 7.0) && impl(ghc < 7.2)
    build-depends:
      template-haskell >=2.5 && <2.6

  if impl(ghc >= 7.4) && impl(ghc < 7.6)
    build-depends:
      template-haskell >=2.7 && <2.8

  exposed-modules:
    Language.C
    Language.C.Parser
    Language.C.Parser.Lexer
    Language.C.Parser.Monad
    Language.C.Parser.Parser
    Language.C.Parser.Tokens
    Language.C.Pretty
    Language.C.Quote
    Language.C.Quote.Base
    Language.C.Quote.C
    Language.C.Quote.CUDA
    Language.C.Quote.GCC
    Language.C.Quote.OpenCL
    Language.C.Smart
    Language.C.Syntax

test-suite unit
  type:             exitcode-stdio-1.0
  hs-source-dirs:   tests/unit
  main-is:          Main.hs
  default-language: Haskell98

  build-depends:
    HUnit >=1.2 && <1.3,
    base >=4 && <5,
    language-c-quote >=0.3 && <0.4,
    srcloc >=0.1 && <0.2,
    symbol >=0.1 && <0.2

source-repository head
