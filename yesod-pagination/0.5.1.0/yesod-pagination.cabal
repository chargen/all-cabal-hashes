  main-is:             main.hs
  hs-source-dirs:      tests
  build-depends:       base
                     , hspec
                     , monad-logger
                     , persistent
                     , persistent-sqlite
                     , resource-pool
                     , resourcet
                     , shakespeare
                     , text
                     , utf8-string
                     , wai-test
                     , yesod
                     , yesod-pagination
                     , yesod-test
  default-language:    Haskell2010


