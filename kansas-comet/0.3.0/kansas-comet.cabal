                       aeson            == 0.7.*,
                       containers       == 0.5.*,
                       data-default     == 0.5.*,
                       scotty           == 0.8.*,
                       stm              >= 2.2		&& < 2.5,
                       transformers     >= 0.3          && < 0.5,
                       text             >= 0.11.3.1     && < 1.2,
                       time             == 1.4.*

  GHC-options: -Wall -fno-warn-orphans

