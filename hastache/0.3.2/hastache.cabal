extra-source-files:
    tests/partFile
    tests/RunTest.sh
    tests/test.hs
    README.md

library
  exposed-modules:
    Text.Hastache
    Text.Hastache.Context

  build-depends:
    base == 4.*
    ,bytestring
    ,mtl
    ,directory
    ,filepath
    ,utf8-string
    ,text
    ,containers
    ,syb
    ,blaze-builder
    ,ieee754

source-repository head
