                       DistanceTransform.Internal.Indexer
  build-depends:       base >=4.5 && < 5, vector >=0.9, primitive
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O2 -Wall

test-suite tests
