                       Codec.FFmpeg.Common,
                       Codec.FFmpeg.Decode,
                       Codec.FFmpeg.Encode,
                       Codec.FFmpeg.Enums,
                       Codec.FFmpeg.Juicy,
                       Codec.FFmpeg.Types,
                       Codec.FFmpeg.Internal.Debug
  build-tools:         hsc2hs
  build-depends:       base >=4.6 && < 5, 
                       vector >= 0.10.9 && < 0.11,
                       transformers >= 0.3 && < 0.4,
                       mtl >= 2.1.3 && < 2.2,
