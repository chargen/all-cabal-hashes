                       mtl >=2.1 && <2.2,
                       lens >=4.2 && <4.3,
                       aeson >=0.7 && <0.8,
                       aeson-pretty >=0.7 && <0.8,
                       text >=1.1 && <1.2,
                       wreq >=0.1 && <0.2,
                       vector >=0.10 && <0.11,
