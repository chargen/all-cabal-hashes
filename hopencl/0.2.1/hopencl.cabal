  hs-source-dirs:    tests/unit
  Main-is:           HOpenCL_Test.hs
  Default-language:  Haskell98
  GHC-options:       -Wall -fno-warn-missing-signatures
  Build-Depends:     base >=4, QuickCheck >= 2, test-framework >= 0.4.0,
