    build-depends:
        base           (==4.*),
        bytestring     (>=0.9.2.1),
        network,
        network-simple (>=0.2 && <0.3),
        pipes          (>=3.1 && <3.3),
        pipes-safe     (>=1.1 && <1.2),
        transformers   (>=0.2 && <0.4)
    exposed-modules:
        Control.Proxy.TCP
