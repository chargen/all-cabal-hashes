        bytestring     (>=0.9.2.1),
        network,
        network-simple (>=0.3 && <0.5),
        pipes          (>=4.0 && <4.2),
        pipes-safe     (>=2.1 && <2.3),
        transformers   (>=0.2 && <0.5)
    exposed-modules:
        Pipes.Network.TCP
