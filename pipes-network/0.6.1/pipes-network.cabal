        bytestring     (>=0.9.2.1),
        network,
        network-simple (>=0.3 && <0.4),
        pipes          (>=4.0 && <4.1),
        pipes-safe     (>=2.0.1 && <2.1),
        transformers   (>=0.2 && <0.4)
    exposed-modules:
        Pipes.Network.TCP
        Pipes.Network.TCP.Safe
    ghc-options: -Wall -O2



