    Build-depends:   base >= 4 && < 5
                   , bytestring
                   , crypto-api
                   , cryptocipher
                   , criterion
                   , mtl
  else
    Buildable:       False
  if flag(aesni)
    cpp-options:     -DHAVE_AESNI
    C-sources:       cbits/aes/x86ni.c
    CC-options:      -mssse3 -maes

