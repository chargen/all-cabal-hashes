                   , bytestring
                   , vector >= 0.7
                   , cpu >= 0.1 && < 0.2
                   , ghc-prim
                   , primitive
                   , crypto-api >= 0.5
                   , crypto-pubkey-types >= 0.2 && < 0.3
                   , tagged
                   , cereal
