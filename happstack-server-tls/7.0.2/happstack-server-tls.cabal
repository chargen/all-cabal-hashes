Name:                happstack-server-tls
Version:             7.0.2
Synopsis:            extend happstack-server with https:// support (TLS/SSL)
Description:         extend happstack-server with https:// support (TLS/SSL)
Homepage:            http://www.happstack.com/
License:             BSD3
License-file:        LICENSE
Author:              Jeremy Shaw
Maintainer:          jeremy@n-heptane.com
Copyright:           2012 Jeremy Shaw
Category:            Web, Happstack
Build-type:          Simple
Cabal-version:       >=1.6

Library
    hs-source-dirs:    src

    Exposed-modules:   Happstack.Server.Internal.TimeoutSocketTLS
                       Happstack.Server.Internal.TLS
                       Happstack.Server.SimpleHTTPS

    Build-Depends:     base                  <  5,
                       bytestring            >= 0.9 && < 0.11,
                       extensible-exceptions == 0.1.*,
                       happstack-server      >= 6.6.4 && < 7.2,
                       hslogger              >=  1.1 && < 1.3,
                       HsOpenSSL             == 0.10.*,
                       network               >= 2.3 && < 2.5,
                       sendfile              == 0.7.*,
                       time                  >= 1.2 && < 1.5
    Extra-Libraries:   ssl
    if !os(darwin)
        Extra-Libraries: cryptopp

    if !os(windows)
       Build-Depends:  unix
       cpp-options:    -DUNIX


