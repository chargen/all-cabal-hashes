executable hburg
    executable: hburg
    main-is: Main.hs
    hs-source-dirs: src

    if flag(small_base)
      build-depends: base >= 3, containers, array
    else
      build-depends: base >= 1.0

    build-depends: haskell98 >= 1.0, filepath, mtl

