  type:              exitcode-stdio-1.0
  build-depends:
      base == 4.*
    , hspec
    , command-qq
    , template-haskell
    , text
  hs-source-dirs:
      test
    , example
  main-is:           Spec.hs
  other-modules:
    System.Command.QQ.EmbedSpec
    System.Command.QQ.EvalSpec


