  main-is:           test/TestFit.hs
  default-language:  Haskell2010
  ghc-options:       -Wall
  build-depends:      base >=4.7 && <4.8
                    , fit
                    , hspec
                    , hspec-attoparsec
                    , QuickCheck
                    , attoparsec
                    , bytestring
                    , text
                    , mtl
                    , containers


