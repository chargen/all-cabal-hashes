  exposed-modules:     Fit
                     , Fit.Messages
                     , Fit.Messages.Lens
                     , Fit.Internal.Architecture
                     , Fit.Internal.FitFile
                     , Fit.Internal.FitParser
                     , Fit.Internal.Numbers
                     , Fit.Internal.Parse
  ghc-options:         -Wall
  build-depends:       base >=4.7 && <4.8
                     , attoparsec >= 0.10.3
                     , bytestring
                     , text
                     , mtl >= 1.1
                     , containers >= 0.5
                     , contravariant
  default-language:    Haskell2010

test-suite test-fit
