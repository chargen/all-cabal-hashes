  Build-Depends:        base >= 4 && < 4.8, array >= 0.1, pretty >= 1.0

  Exposed-modules:      Language.Haskell.Exts,
                        Language.Haskell.Exts.Parser,
                        Language.Haskell.Exts.Pretty,
                        Language.Haskell.Exts.Syntax,
                        Language.Haskell.Exts.Build
