executable mustache2hs
        main-is: mustache2hs.hs

        other-modules: ParseRecords

        build-depends:
                base >= 4.2.0.0 && < 5.0.0.0,
                text,
                parsec >= 3.1.2,
                haskell-src,
                utf8-string,
                bytestring,
                blaze-builder >= 0.2.0.0,
                transformers,
                filepath

