                       split >= 0.2 && <0.3,
                       pipes >= 4.1 && < 4.2,
                       pipes-group >= 1.0 && < 1.1,
                       pipes-text >= 0.0 && < 0.1,
                       lens >= 4.9 && < 4.10,
                       foldl >= 1.0 && < 1.1
  
