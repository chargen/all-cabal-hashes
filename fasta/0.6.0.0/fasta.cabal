                      Data.Fasta.String.Types,
                      Data.Fasta.String.Parse,
                      Data.Fasta.String.Translation,
                      Data.Fasta.Text,
                      Data.Fasta.Text.Types,
                      Data.Fasta.Text.Parse,
                      Data.Fasta.Text.Translation,
                      Data.Fasta.Text.Lazy,
