  build-depends:
    base >3 && <5 ,
    biocore             >= 0.2      ,
    bytestring                      ,
    conduit             == 0.5.*    ,
    containers                      ,
    transformers

  exposed-modules:
    Biobase.Fasta
    Biobase.Fasta.Import

  ghc-options:
    -O2

executable FastaTool
  main-is:
