name:                hlibBladeRF
version:             0.1.0.4
synopsis:            Haskell binding to libBladeRF SDR library
description:         IO Monadic binding for libbladeRF software defined radio.
homepage:            https://victoredwardocallaghan.github.io/hlibBladeRF
bug-reports:         https://github.com/victoredwardocallaghan/hlibBladeRF/issues
license:             LGPL-2.1
license-file:        LICENSE
author:              Edward O'Callaghan
maintainer:          eocallaghan@alterapraxis.com
copyright:           (c) Edward O'Callaghan, 2015
category:            FFI
build-type:          Simple
extra-source-files:  ChangeLog
cabal-version:       >=1.10

--------------------------------------------
-- Test suites
--
--test-suite haddock
--    build-depends:    base, process, regex-compat
--    default-language: Haskell2010
--    hs-source-dirs:   test-suite
--    main-is:          Haddock.hs
--    type:             exitcode-stdio-1.0
-- XXX disable until Haddock does not fail on bindings

test-suite hlint
    build-depends:    base, hlint
    default-language: Haskell2010
    hs-source-dirs:   test-suite
    main-is:          HLint.hs
    type:             exitcode-stdio-1.0

--------------------------------------------
-- Library modules
--
library
  exposed-modules:     LibBladeRF
                       LibBladeRF.LibBladeRF
                       LibBladeRF.Sampling
                       LibBladeRF.Sync
                       LibBladeRF.Gain
                       LibBladeRF.Gpio
                       LibBladeRF.Flash
                       LibBladeRF.Frequency
                       LibBladeRF.Utils
                       LibBladeRF.Types

  other-modules:       Bindings.LibBladeRF
                       Bindings.LibBladeRF.LibBladeRF
                       Bindings.LibBladeRF.Utils
                       Bindings.LibBladeRF.Flash
                       Bindings.LibBladeRF.Si5338
                       Bindings.LibBladeRF.Sync
                       Bindings.LibBladeRF.Lms
                       Bindings.LibBladeRF.Gain
                       Bindings.LibBladeRF.Gpio
                       Bindings.LibBladeRF.Types
  -- other-extensions:    
  default-extensions:  ForeignFunctionInterface
  build-depends:       base >=4 && <4.8,
                       bindings-DSL >= 1.0.16 && < 1.1,
                       bytestring
  pkgconfig-depends:   libbladeRF >= 0.16.2
  hs-source-dirs:      src
  c-sources:           src/inlines.c
  default-language:    Haskell2010

