  hs-source-dirs:   src
  main-is:          Main.hs
  other-modules:    GUI Board AI AI.Utils AI.Lame AI.Minimax
  build-depends:
    base       >= 4       && < 5,
    containers,
    gtk        >=0.11, 
    cairo      >= 0.11, 
    glade      >= 0.11,
