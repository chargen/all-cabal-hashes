  main-is:          Main.hs
  other-modules:    GUI Serialize Board AI AI.Tree AI.Eval AI.Minimax Tournament Tests
  build-depends:
    base       >= 4       && < 5,
    haskell98,
    filepath >= 1.1,
    directory >= 1.0,
    containers,
    gtk        >=0.11, 
    cairo      >= 0.11, 
    glade      >= 0.11,
    random     >= 1.0.0   && < 1.1,
    QuickCheck >= 2.1,
    xml >= 1.3

 ghc-options: -threaded 
 ghc-prof-options: -prof -auto-all
