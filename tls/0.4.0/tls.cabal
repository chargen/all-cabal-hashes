                   , mtl
                   , cryptohash >= 0.6
                   , binary >= 0.5
                   , cereal >= 0.3
                   , bytestring
                   , vector
                   , crypto-api >= 0.5
                   , cryptocipher >= 0.2.5
                   , certificate >= 0.7 && < 0.8
  Exposed-modules:   Network.TLS
                     Network.TLS.Cipher
                     Network.TLS.Compression
  other-modules:     Network.TLS.Cap
