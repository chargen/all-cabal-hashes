data-files:          README.md, TODO

Flag test
  Description:       Build unit test
  Default:           False

Flag executable
  Description:       Build the executable
  Default:           False

Library
  Build-Depends:     base >= 3 && < 5
                   , mtl
                   , cryptohash >= 0.6
                   , cereal >= 0.3
                   , bytestring
                   , crypto-api >= 0.5
                   , cryptocipher >= 0.3.0
                   , certificate >= 1.0.0 && < 1.1.0
  Exposed-modules:   Network.TLS
                     Network.TLS.Cipher
                     Network.TLS.Compression
                     Network.TLS.Internal
  other-modules:     Network.TLS.Cap
                     Network.TLS.Struct
                     Network.TLS.MAC
                     Network.TLS.Core
                     Network.TLS.Crypto
                     Network.TLS.Packet
                     Network.TLS.Record
                     Network.TLS.State
                     Network.TLS.Sending
                     Network.TLS.Receiving
                     Network.TLS.Util
                     Network.TLS.Wire
  ghc-options:       -Wall

executable           Tests
  Main-is:           Tests.hs
  if flag(test)
    Buildable:       True
    Build-Depends:   base >= 3 && < 5
                   , QuickCheck >= 2
                   , test-framework
                   , test-framework-quickcheck2
                   , bytestring
  else
    Buildable:       False
  ghc-options:       -Wall -fhpc

