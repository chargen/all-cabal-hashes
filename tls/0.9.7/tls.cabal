                   , mtl
                   , cryptohash >= 0.6
                   , cereal >= 0.3
                   , bytestring
                   , crypto-api >= 0.5
                   , cryptocipher >= 0.3.0 && < 0.4.0
                   , certificate >= 1.2.0 && < 1.3.0
  Exposed-modules:   Network.TLS
                     Network.TLS.Cipher
                     Network.TLS.Compression
                     Network.TLS.Internal
  other-modules:     Network.TLS.Cap
                     Network.TLS.Struct
                     Network.TLS.Core
                     Network.TLS.Context
                     Network.TLS.Crypto
                     Network.TLS.MAC
                     Network.TLS.Measurement
                     Network.TLS.Packet
                     Network.TLS.Record
                     Network.TLS.Record.Types
                     Network.TLS.Record.Engage
                     Network.TLS.Record.Disengage
                     Network.TLS.State
                     Network.TLS.Sending
                     Network.TLS.Receiving
                     Network.TLS.Util
                     Network.TLS.Wire
  ghc-options:       -Wall

executable           Tests
  Main-is:           Tests.hs
  if flag(test)
    Buildable:       True
    Build-Depends:   base >= 3 && < 5
                   , QuickCheck >= 2
                   , test-framework
                   , test-framework-quickcheck2
                   , bytestring
                   , time
                   , cprng-aes
                   , cryptocipher >= 0.3.0
  else
    Buildable:       False
  ghc-options:       -Wall -fno-warn-orphans -fno-warn-missing-signatures -fhpc

