  build-depends:
    base == 4.7.*,
    cond == 0.4.*,
    containers == 0.5.*,
    cmdargs == 0.10.*,
    directory == 1.2.*,
    Referees == 0.0.0
  hs-source-dirs:
    src-cli
  default-language:
    Haskell2010

