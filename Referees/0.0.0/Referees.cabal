  location:          https://github.com/pablocouto/Referees.git

flag debug
  default: False

flag documentation
  default: False

library
  exposed-modules:
    Referees,
    Referees.Internal,
    Referees.Types,
    Referees.Types.Internal,
    Referees.Solver,
    Referees.Solver.Internal,
    Referees.Solver.Types,
    Referees.Solver.Types.Internal
  build-depends:
    base == 4.7.*,
    containers == 0.5.*,
