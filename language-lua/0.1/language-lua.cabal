  Exposed-modules:   Language.Lua.Types,
                     Language.Lua.Token,
                     Language.Lua.Parser,
                     Language.Lua.Lexer,
                     Language.Lua.PrettyPrinter
                     Text.Parsec.LTok

  Other-modules:     Text.PrettyPrint.Leijen

  Build-depends:     base >= 4.5 && < 4.6,
                     mtl >= 2.0 && < 2.1,
                     parsec >= 3.1.3 && < 3.2,
                     array >= 0.4 && < 0.5


