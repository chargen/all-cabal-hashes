build-type:     Simple
cabal-version:  >= 1.10

source-repository head
    type:       git
    location:   http://github.com/liyang/fast-math

library
    default-language: Haskell2010
    build-depends:
        base >= 3 && < 5
    exposed-modules:
        Numeric.FastMath
        Numeric.FastMath.Approximation
        Numeric.FastMath.NaN
        Numeric.FastMath.SignedZeros
    default-extensions:
        NoImplicitPrelude
        MagicHash
    ghc-options: 
        -Wall 
        -fno-warn-orphans



