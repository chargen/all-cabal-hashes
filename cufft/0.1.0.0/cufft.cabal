  other-modules:        Foreign.CUDA.FFT.Error
                        Foreign.CUDA.FFT.Plan
                        Foreign.CUDA.FFT.Execute

  build-depends:        base == 4.*,
                        cuda >= 0.4.1

  build-tools:          c2hs >= 0.16
  ghc-options:          -Wall -O2 -funbox-strict-fields -fwarn-tabs

