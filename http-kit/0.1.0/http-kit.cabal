author:           Simon Hengel <sol@typeful.net>
maintainer:       Simon Hengel <sol@typeful.net>
build-type:       Simple
category:         Network
cabal-version:    >= 1.8

source-repository head
  type: git
  location: https://github.com/zalora/http-kit

library
  ghc-options:
      -Wall
  hs-source-dirs:
      src
  exposed-modules:
      Network.HTTP.Toolkit.Body
      Network.HTTP.Toolkit.Connection
      Network.HTTP.Toolkit.Header
      Network.HTTP.Toolkit.Request
      Network.HTTP.Toolkit.Response
      Network.HTTP.Toolkit.Error
  other-modules:
      Network.HTTP.Toolkit.Util
  build-depends:
      base == 4.*
    , bytestring
    , http-types
    , case-insensitive

test-suite spec
  type:
      exitcode-stdio-1.0
  ghc-options:
      -Wall -Werror
  hs-source-dirs:
      test
  main-is:
      Spec.hs
  build-depends:
      base == 4.*
    , http-kit
    , http-types
    , bytestring
    , hspec >= 1.9
    , QuickCheck
    , quickcheck-instances


