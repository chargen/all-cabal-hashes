      exitcode-stdio-1.0
  ghc-options:
      -Wall -Werror
  hs-source-dirs:
      test
  main-is:
      Spec.hs
  build-depends:
      base == 4.*
    , http-kit
    , http-types
    , bytestring
    , hspec >= 1.9
    , QuickCheck
    , quickcheck-instances
