library
  exposed-modules:   Data.Pool
  build-depends:
      base           == 4.*
    , exceptions     == 0.6.*
    , hashable
    , stm
    , time
    , transformers
    , vector

  ghc-options:       -Wall -funbox-strict-fields

  default-language:  Haskell2010

