  main-is:             test-calc.hs
  other-modules:       Calc
  build-depends:       base,
                       HUnit == 1.2.*,
                       unbound-generics
  hs-source-dirs:      test
  default-language:    Haskell2010
  ghc-options:         -Wall

Test-Suite test-parallelreduction
  type:                exitcode-stdio-1.0
  main-is:             test-parallelreduction.hs
  other-modules:       ParallelReduction
  build-depends:       base,
                       HUnit == 1.2.*,
                       mtl >= 2.1,
                       unbound-generics
  hs-source-dirs:      test
  default-language:    Haskell2010
  ghc-options:         -Wall

