                     , yaml                      >= 0.8.4         && < 0.9
                     , unix-compat               >= 0.3           && < 0.5
                     , fsnotify                  >= 0.0.11
                     , system-filepath           >= 0.4           && < 0.5
                     , system-fileio             >= 0.3           && < 0.4
                     , conduit                   >= 1.1
                     , conduit-extra             >= 1.1
                     , network-conduit-tls       >= 1.1
                     , http-reverse-proxy        >= 0.4           && < 0.5
                     , unix                      >= 2.5
