                     , attoparsec                >= 0.10
                     , http-client
                     , http-conduit              >= 2.1
                     , case-insensitive
                     , array
                     , mtl
                     , warp
                     , warp-tls
                     , aeson
                     , unordered-containers
                     , vector
                     , stm
                     , async
                     , lifted-base
