                    , bytestring
                    , containers
                    , curl
                    , data-default
                    , directory
                    , filepath
                    , fsnotify
                    , hack2
                    , hack2-contrib
                    , hspec
                    , miku
                    , mtl
                    , old-locale
                    , process
                    , random
                    , safe
                    , split
                    , system-filepath
                    , text
                    , text-icu
                    , time
                    , uuid
                    , moe


  hs-source-dirs:     src/
  exposed-modules:
                      Web.Geek.Application
                      Web.Geek.Config
                      Web.Geek.DefaultConfig
                      Web.Geek.DemoMiddlewareStack
                      Web.Geek.Post
