stability:      experimental
homepage:       http://feldspar.github.com
bug-reports:    https://github.com/feldspar/feldspar-language/issues
build-type:     Simple
cabal-version:  >= 1.14
tested-with:    GHC==7.6.1, GHC==7.4.2

extra-source-files:
