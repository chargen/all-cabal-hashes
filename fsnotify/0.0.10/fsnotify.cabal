                        , Cabal >= 1.14.0
                        , containers >= 0.4.2.1
                        , Glob >= 0.7.1
                        , hspec >= 1.3.0
                        , random >= 1.0.1.1
                        , system-filepath >= 0.4.6
                        , system-fileio >= 0.3.7
                        , text >= 0.10
                        , time >= 1.1
                        , QuickCheck >= 2.4.2
