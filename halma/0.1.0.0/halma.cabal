                       base >= 4.7 && < 5,
                       diagrams-gtk >= 1.0.1.3 && < 1.1,
                       gtk >= 0.13.4 && < 0.14,
                       mtl,
                       diagrams-lib,
                       diagrams-cairo,
                       pipes >= 4.1.4 && < 4.2,
                       mvc >= 1.0.3 && < 1.1,
                       vector-space-points,
                       async >= 2.0.2 && < 2.1,
                       data-default,
                       timeit >= 1.0 && < 1.1
  default-language:    Haskell2010
