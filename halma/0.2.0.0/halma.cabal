  Ghc-options:         -Wall
  Hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  other-modules:       Game.Halma.Board.Tests,
                       Game.Halma.Rules.Tests
  default-language:    Haskell2010
  Build-depends:       halma,
                       grid,
                       HUnit,
                       QuickCheck,
                       base,
                       containers,
                       test-framework >= 0.6 && < 0.9,
                       test-framework-hunit >= 0.3.0 && < 0.4,
                       test-framework-quickcheck2 >= 0.3.0 && < 0.4

