                       grid >= 7.7.1 && < 7.9,
                       containers >= 0.5 && < 0.6,
                       diagrams-lib >= 1.3 && < 1.4,
                       data-default >= 0.4 && < 0.6
  hs-source-dirs:      src
  default-language:    Haskell2010

