  Ghc-options:         -threaded -Wall
  build-depends:       halma,
                       base >= 4.6 && < 5,
                       diagrams-gtk >= 1.0.1.3 && < 1.4,
                       gtk >= 0.13.4 && < 0.14,
                       mtl,
                       diagrams-lib >= 1.3,
                       diagrams-cairo,
                       pipes >= 4.1.4 && < 4.2,
                       mvc >= 1.0.3 && < 1.1,
                       async >= 2.0.2 && < 2.1,
                       data-default,
                       timeit >= 1.0 && < 1.1
  default-language:    Haskell2010
  main-is:             halma.hs

