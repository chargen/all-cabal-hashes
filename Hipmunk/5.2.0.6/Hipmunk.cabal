    Build-Depends: base >= 3 && < 5,
                   array >= 0.1 && < 0.4,
                   containers >= 0.1 && < 0.5,
                   transformers >= 0.2 && < 0.3,
                   StateVar >= 1.0 && < 1.1
  else
    Build-Depends: base >= 2 && < 3,
                   transformers >= 0.2 && < 0.3,
                   StateVar >= 1.0 && < 1.1
