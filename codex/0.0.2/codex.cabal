  hs-source-dirs:    src
  ghc-options:       -fwarn-incomplete-patterns
  exposed-modules:
    Codex
    Codex.Project
    Codex.Internal
    Distribution.Hackage.Utils
  build-depends:       
    base >=4.6 && <4.8
    , bytestring
    , Cabal >= 1.19
    , containers
    , directory
    , download-curl
    , either
    , filepath
    , hackage-db
    , MissingH
    , process
    , tar
    , text
    , transformers
    , zlib

executable codex
