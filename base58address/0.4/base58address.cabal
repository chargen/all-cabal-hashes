        type:       exitcode-stdio-1.0
        main-is:    tests/suite.hs

        cpp-options: -DTESTS

        build-depends:
                base == 4.*,
                containers,
                bytestring,
                binary,
                cryptohash,
                QuickCheck >= 2.4.1.1,
                test-framework,
                test-framework-quickcheck2

