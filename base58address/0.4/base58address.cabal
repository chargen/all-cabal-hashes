library
        exposed-modules:
                Data.Base58Address

        other-modules:
                Data.Base58Address.BaseConvert
                Data.Base58Address.Alphabet

        build-depends:
                base == 4.*,
                containers,
                bytestring,
                binary,
                cryptohash

