                      , unix
                      , unordered-containers
                      , wai >= 1.1
                      , wai-app-file-cgi
                      , wai-logger
                      , wai-logger-prefork
                      , warp
                      , hspec >= 1.3
  if flag(rev-proxy)
    Build-Depends:      http-conduit >= 1.8.2.1
