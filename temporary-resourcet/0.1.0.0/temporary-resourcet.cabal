build-type:     Simple

source-repository head
  type: git
  location: https://github.com/ttuegel/temporary-resourcet.git

Library
  hs-source-dirs: src
  exposed-modules:
    System.IO.Temp
  other-modules:
    Distribution.Compat.Exception
    Distribution.Compat.TempFile
  build-depends:
    base >=3 && <10,
    directory >=1.0,
    exceptions >=0.5,
    filepath >=1.1,
    resourcet >=0.3 && <2,
    transformers >=0.2.0.0

  if !os(windows)
    build-depends: unix >=2.3

test-suite test-temporary-resourcet
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Test.hs
  build-depends:
    base >=3 && <10,
    directory >=1.0,
    resourcet >=0.3 && <2,
    tasty >=0.8 && <0.11,
    tasty-hunit >=0.8 && <0.11,
    temporary-resourcet,
    transformers >=0.2.0.0


