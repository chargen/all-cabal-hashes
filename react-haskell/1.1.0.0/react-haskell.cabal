  other-modules:
    React.Attrs,
    React.Elements,
    React.Events,
    React.Imports,
    React.Types
  other-extensions:
    FlexibleInstances,
    FlexibleContexts,
    ForeignFunctionInterface,
    GeneralizedNewtypeDeriving,
    MultiParamTypeClasses,
    OverloadedStrings
  build-depends:
    base == 4.7.*,
    transformers,
    haste-lib >= 0.4 && <0.5,
    monads-tf
  hs-source-dirs:      src
  default-language:    Haskell2010


