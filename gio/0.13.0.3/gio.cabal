                        glib >= 0.13.0.0 && < 0.14
        build-tools:    gtk2hsC2hs >= 0.13.12,
                        gtk2hsHookGenerator, gtk2hsTypeGen

        exposed-modules:
          System.GIO
          System.GIO.Enums
          System.GIO.Types		  
          
