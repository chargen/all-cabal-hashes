version:             0.1.0.0
synopsis:            A Kafka client for Haskell.
description:         Kafka client for Haskell (not recommended for production use).
license:             BSD3
license-file:        LICENSE
author:              Tyler Holien
maintainer:          tyler.holien@gmail.com
copyright:           2014, Tyler Holien
category:            Network
build-type:          Simple
stability:           alpha
cabal-version:       >=1.10

source-repository head
  type: git
  location: https://github.com/tylerholien/milena.git

source-repository this
  type: git
  location: https://github.com/tylerholien/milena.git
  tag: 0.1.0.0

library
  default-language: Haskell2010
  ghc-options:         -Wall
  exposed-modules:     Network.Kafka,
                       Network.Kafka.Protocol
  build-depends:       base       >=4.7      && <5,
                       mtl        >=2.1      && <2.2,
                       cereal     >=0.4      && <0.5,
                       bytestring >=0.10     && <0.12,
                       network    >=2.4      && <2.7,
                       digest     >=0.0.1.0  && <0.0.2,
                       containers >=0.5      && <0.6,
                       either     >=4.3      && <4.4,
                       random     >=1.0      && <1.2,
                       transformers >=0.3    && <0.4,
                       lens       >=4.4      && <4.5

test-suite test
  default-language: Haskell2010
  ghc-options:         -Wall -threaded
  build-depends:       base,
                       milena,
                       network,
                       QuickCheck,
                       bytestring,
                       hspec
  hs-source-dirs:      test
  main-is:             tests.hs
  type:                exitcode-stdio-1.0


