--                    ,   doctest             >= 0.9.11
--                    ,   filepath            >= 1.3
--                    ,   directory           >= 1.1
--                    ,   QuickCheck          >= 2.0
--                    ,   template-haskell    == 2.9.*
--
--    ghc-options:
--                        -Wall
--                        -threaded
--
--    hs-source-dirs:
