    main-is: Main.hs

    build-depends:
        aeson == 0.3.2.*,
        attoparsec >= 0.8.6.1,
        base == 4.*,
        blaze-builder >= 0.2.1.4,
        bytestring == 0.9.*,
        cmdargs == 0.7.*,
        containers,
        vector >= 0.7,
        text

    ghc-options: -Wall
    ghc-prof-options: -auto-all
    
