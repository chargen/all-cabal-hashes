                     , hjsmin
                     , http-conduit
                     , http-types
                     , lifted-base
                     , markdown                      >= 0.1.5
                     , mime-mail
                     , network
                     , old-locale
                     , process
                     , process-conduit               >= 0.5
                     , pwstore-fast
                     , random
                     , tagsoup
                     , template-haskell
                     , text
                     , time
                     , transformers
                     , unordered-containers
                     , vector
                     , wai
                     , wai-extra
                     , warp
                     , xss-sanitize                  >= 0.3.4
                     , yaml
                     , yesod                         >= 1.2    && < 1.3
                     , yesod-auth
                     , yesod-static
    else
        build-depends: base                          >= 4          && < 5

                     , aeson
                     , attoparsec
                     , attoparsec-conduit
                     , blaze-builder
