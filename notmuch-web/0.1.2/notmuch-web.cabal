                     , hamlet
                     -- https://github.com/bos/aeson/issues/125 and https://github.com/tibbe/hashable/issues/66
                     , hashable                      <= 1.2.0.5 || > 1.2.0.7
                     , hjsmin
                     , http-conduit
                     , http-types
                     , lifted-base
                     , markdown                      >= 0.1.5
                     , mime-mail
                     , network
                     , old-locale
                     , process
                     , process-conduit               >= 0.5
                     , pwstore-fast
                     , random
                     , tagsoup
                     , template-haskell
                     , text
                     , text-icu
