    build-depends:   base                    >= 4          && < 5
                   , bytestring              >= 0.9.1.4
                   , yesod-core              >= 1.4        && < 1.5
                   , yesod-auth              >= 1.4        && < 1.5
                   , text                    >= 0.7
                   , yesod-persistent        >= 1.2
                   , persistent              >= 2.1        && < 2.3
                   , yesod-form              >= 1.4        && < 1.5
                   , pwstore-fast            >= 2.2
                   , cryptohash              >= 0.8

    exposed-modules: Yesod.Auth.HashDB
    ghc-options:     -Wall

