  build-depends:
    filepath            >= 1.3      && < 1.4,
    directory           >= 1.2      && < 1.3,
    temporary           >= 1.1      && < 1.2
  main-is: nerf.hs
  ghc-options: -Wall -O2 -threaded -rtsopts


