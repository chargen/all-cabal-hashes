      , NLP.Nerf.Schema
      , NLP.Nerf.Tokenize
      , NLP.Nerf.Dict
      , NLP.Nerf.Dict.Base
      , NLP.Nerf.Dict.PNEG
      , NLP.Nerf.Dict.PNET
      , NLP.Nerf.Dict.NELexicon
      , NLP.Nerf.Dict.Prolexbase
      , NLP.Nerf.Compare
      , NLP.Nerf.Server
      , NLP.Nerf.XCES

    ghc-options: -Wall -O2

source-repository head
    type: git
    location: https://github.com/kawu/nerf.git

executable nerf
