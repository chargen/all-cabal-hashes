      , data-named >= 0.5.1 && < 0.6
      , monad-ox >= 0.2 && < 0.3
      , sgd >= 0.2.1 && < 0.3
      , polimorf >= 0.6.0 && < 0.7
      , dawg >= 0.8.1 && < 0.9
      , tokenize == 0.1.3
      , cmdargs

    exposed-modules:
        NLP.Nerf
      , NLP.Nerf.Types
      , NLP.Nerf.Schema
      , NLP.Nerf.Tokenize
      , NLP.Nerf.Dict
      , NLP.Nerf.Dict.Base
      , NLP.Nerf.Dict.PNEG
      , NLP.Nerf.Dict.PNET
      , NLP.Nerf.Dict.NELexicon
      , NLP.Nerf.Dict.Prolexbase

    ghc-options: -Wall -O2

source-repository head
    type: git
    location: https://github.com/kawu/nerf.git

executable nerf
  hs-source-dirs: ., tools
  main-is: nerf.hs
  ghc-options: -Wall -O2 -threaded -rtsopts


