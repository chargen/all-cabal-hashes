  build-depends:
    base                   >= 4        && < 5,
    containers             >= 0.3      && < 0.6,
    fgl                    >= 5.4.2.4,
    parsec                 >= 3

  exposed-modules:
    Language.Carneades.CarneadesDSL
    Language.Carneades.ExampleCAES
    Language.Carneades.Cyclic
    Language.Carneades.Input
    

