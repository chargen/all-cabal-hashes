  test-module:         Merge
  build-depends:       base >=4.8 && <4.9, 
                       Cabal >= 1.10,
                       step-function,
                       QuickCheck,
                       cabal-test-quickcheck
  hs-source-dirs:      test
  default-language:    Haskell2010

