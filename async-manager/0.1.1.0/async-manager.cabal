  build-depends: base >=4.6 && <4.8
               , async >=2.0 && <2.1
               , stm >=2.4 && <2.5
               , unordered-containers >=0.2 && <0.3
  hs-source-dirs:      src
  default-language:    Haskell2010

executable thread-clean-up-test
  main-is: ThreadCleanupTest.hs
  build-depends: base >=4.7 && <4.8
               , async >=2.0 && <2.1
               , stm >=2.4 && <2.5
               , unordered-containers >=0.2 && <0.3
  hs-source-dirs: src, tests
  default-language: Haskell2010
  
  ghc-options: -threaded -eventlog -rtsopts -with-rtsopts=-l

