flag small_base
  description: Choose the new smaller, split-up base package.

executable alex
--  executable: alex
  hs-source-dirs: src
  main-is: Main.hs

  if flag(small_base)
    build-depends: base >= 2.1 && < 4.3, array, containers, directory
  else
    build-depends: base >= 1.0 && < 2.1

  build-depends: haskell98 >= 1.0

  extensions: CPP
  other-modules:
        AbsSyn
        CharSet
        DFA
        DFS
        Info
        Main
        Map
        NFA
        Output
        Parser
        ParseMonad
        Scan
        Set
        Sort
        Util


