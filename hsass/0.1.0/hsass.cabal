      Text.Sass
    , Text.Sass.Compilation
    , Text.Sass.Functions
    , Text.Sass.Options
    , Text.Sass.Values
    , Text.Sass.Internal
    , Text.Sass.Functions.Internal
    , Text.Sass.Options.Internal
    , Text.Sass.Values.Internal
    , Text.Sass.Utils
  build-depends:
