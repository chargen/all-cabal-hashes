                     rank1dynamic >= 0.2.0.0 && < 0.3,
                     distributed-static >= 0.3.0.0 && < 0.4,
                     network-transport >= 0.4.0.0 && < 0.5,
                     distributed-process >= 0.5.0 && < 0.6,
                     distributed-process-platform >= 0.1.0 && < 0.2

  if flag(tcp)
