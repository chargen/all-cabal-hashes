    transformers >= 0.3.0.0,
    conduit >= 0.5.2.2,
    network >= 2.3.0.13,
    http-date >= 0.0.2,
    time >= 1.4,
    old-locale >= 1.0.0.4,
    SHA >= 1.5.1,
    base64-bytestring >= 0.1.2.0,
    case-insensitive >= 0.4.0.1,
    utf8-string >= 0.3.7,
    cmdargs >= 0.10,
    directory >= 1.1.0.2

