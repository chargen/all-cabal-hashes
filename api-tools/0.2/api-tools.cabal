        Cabal                >= 1.9.2       ,
        QuickCheck           >= 2.5.1,
        aeson                >= 0.6.2 && < 0.7,
        aeson-pretty         <= 0.7         ,
        array                >= 0.4,
        attoparsec           >= 0.10.4,
        base                 == 4.*,
        base64-bytestring    == 1.0.*,
        bytestring           >= 0.9     && < 0.11,
        case-insensitive     >= 1.0,
        containers           >= 0.5,
        lens                 >= 3.8.7,
        old-locale           >= 1.0.0.4,
        regex-compat-tdfa    >= 0.95.1,
        safe                 >= 0.3.3,
        safecopy             >= 0.8.1,
        time                 >= 1.4,
        template-haskell     >= 2.7,
        text                 >= 0.11,
        unordered-containers >= 0.2.3.0     ,
        vector               >= 0.10.0.1

  Build-tools:
        alex,
        happy

  GHC-Options:
        -Wall
        -fwarn-tabs

  Default-Language: Haskell2010


