  type:                exitcode-stdio-1.0
  main-is:             test.hs
  build-depends:       base ==4.*
                     , mtl ==2.1.*
                     , transformers ==0.3.*
                     , bytestring ==0.9.*
                     , network-conduit ==0.5.*
                     , binary ==0.5.*
                     , msgpack ==0.7.*
                     , network ==2.3.*
                     , pool-conduit ==0.1.*
                     , monad-control ==0.3.*
                     , lifted-base ==0.1.*
                     , transformers-base ==0.4.*
                     , hspec ==1.3.*
                     , HUnit ==1.2.*

test-suite benchmark
  hs-source-dirs:      test, .
  type:                exitcode-stdio-1.0
  main-is:             benchmark.hs
  build-depends:       base ==4.*
                     , mtl ==2.1.*
                     , transformers ==0.3.*
                     , bytestring ==0.9.*
                     , binary ==0.5.*
                     , network ==2.3.*
                     , network-conduit ==0.5.*
                     , pool-conduit ==0.1.*
