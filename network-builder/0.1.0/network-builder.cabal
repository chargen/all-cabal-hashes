    type:              exitcode-stdio-1.0
    main-is:           test.hs
    hs-source-dirs:    tests,dist/build/autogen
    ghc-options:       -Wall

    build-depends:     base
                      ,hspec
                      ,hspec-server
                      ,cabal-test-bin
