  build-depends:       base >=4.6 && <5
                      ,aeson
                      ,yaml
                      ,shelly
                      ,text
                      ,bytestring
                      ,optparse-applicative
                      ,network-builder
  -- hs-source-dirs:      
  default-language:    Haskell2010
  ghc-options:       -Wall

