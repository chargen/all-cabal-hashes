  hs-source-dirs: tools
  build-depends:
    base == 4.6.*,
    hdocs,
    aeson == 0.6.*,
    aeson-pretty == 0.7.*,
    bytestring == 0.10.*,
    containers == 0.5.*,
    filepath == 1.3.*,
    mtl == 2.1.*,
    network == 2.4.*,
    text == 0.11.*

test-suite test
