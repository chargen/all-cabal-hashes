    Network.Bitcoin.BitX
    Network.Bitcoin.BitX.Public
    Network.Bitcoin.BitX.Private
    Network.Bitcoin.BitX.Types
    Network.Bitcoin.BitX.Private.Quote
    Network.Bitcoin.BitX.Private.Auth
    Network.Bitcoin.BitX.Response

  ghc-options: -Wall
  if impl(ghc >= 6.8)
