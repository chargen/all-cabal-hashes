library
    build-depends:
        base       >= 4       && < 5,
        process    >= 1.0.1.1 && < 1.1,
        digest     >= 0.0.0.8 && < 0.0.1,
        bytestring >= 0.9.1.4 && < 0.9.2,
        directory  >= 1.0.0.2 && < 1.0.1

    exposed-modules:
        Language.Mecha
        Language.Mecha.Assembly
        Language.Mecha.Examples
        Language.Mecha.Solid
        Language.Mecha.Types

    extensions:

    ghc-options:       -W -fwarn-tabs

